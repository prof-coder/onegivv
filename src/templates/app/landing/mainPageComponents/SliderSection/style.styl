.sliderSection
    #ReactBackgroundSlider
        > figure
            max-height: 604px
    .gradientOverlay
        cursor: pointer
        opacity: 0.5
        position: absolute
        left: 0
        top: 0
        width: 100%
        height: 100%
        max-height: 604px
        /*background-image url(/images/proj_gradient.svg)
        background-size cover*/
        background: linear-gradient(180deg, #CCCCCC 0%, #666666 100%)

@media all and (max-width: 425px)
    .sliderSection
        #ReactBackgroundSlider
            > figure
                max-height: 500px
        .gradientOverlay
            max-height: 500px

// Extra small devices (portrait phones, less than 576px)
@media (max-width: 575.98px)
    .sliderSection
        #ReactBackgroundSlider
            > figure
                max-height: 500px
        .gradientOverlay
            max-height: 500px

// Small devices (landscape phones, 576px and up)
@media (min-width: 576px) and (max-width: 767.98px)
    .sliderSection
        #ReactBackgroundSlider
            > figure
                max-height: 500px

// Medium devices (tablets, 768px and up)
@media (min-width: 768px) and (max-width: 1023.98px)
    .sliderSection
        #ReactBackgroundSlider
            > figure
                max-height: 604px
        .gradientOverlay
            max-height: 604px

// Extra large devices 1 (large desktops, 1024px and up)
@media (min-width: 1024px) and (max-width: 1279.98px)
    .sliderSection
        #ReactBackgroundSlider
            > figure
                max-height: 604px
        .gradientOverlay
            max-height: 604px

// Extra large devices 2 (large desktops, 1200px and up)
@media (min-width: 1280px) and (max-width: 1365.98px)
    .sliderSection
        #ReactBackgroundSlider
            > figure
                max-height: 755px
        .gradientOverlay
            max-height: 755px

// Extra large devices 3 (large desktops, 1366px and up)
@media (min-width: 1366px) and (max-width: 1599.98px)
    .sliderSection
        #ReactBackgroundSlider
            > figure
                max-height: 805px
        .gradientOverlay
            max-height: 805px

// Extra large devices 3 (large desktops, 1600px and up)
@media (min-width: 1600px) and (max-width: 1921.98px)
    .sliderSection
        #ReactBackgroundSlider
            > figure
                max-height: 945px
        .gradientOverlay
            max-height: 945px

// Extra large devices 5 (large desktops, 1920px and up)
@media (min-width: 1920px)
    .sliderSection
        #ReactBackgroundSlider
            > figure
                max-height: 1133px
        .gradientOverlay
            max-height: 1133px