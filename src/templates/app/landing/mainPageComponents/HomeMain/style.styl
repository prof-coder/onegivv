.home-main
    .cn
        .home-main__content
            .searchBox
                width: 520px
                position: relative
                .searchInput
                    width: 100%
                    height: 50px
                    border-radius: 5px
                    padding: 15px 15px 15px 45px
                    font-size: 18px
                .searchIcon
                    position: absolute
                    top: 11px
                    left: 10px
                .search-result
                    position: absolute
                    z-index: 999
                    width: 520px
                    max-width: 520px
                    left: 0
                    top: 50px
                    box-shadow: 0px 1px 5px rgba(0, 0, 0, 0.15) 
                    border-radius: 0
                    background-color: #ffffff
                    a
                        text-decoration: none
                    .all-result
                        cursor: pointer
                        padding: 8px 16px
                        display: flex
                        justify-content: space-between
                        align-items: center
                        border-bottom: 1px solid #DDDDDD;
                        ._label
                            color: #666666;
                            line-height: 24px;
                            font-size: 12px;
                        ._img
                            width: 8px
                            height: 4px
                            transform: rotate(-90deg);
                    .search-body
                        padding: 16px 16px 10px 16px
                        max-height: 500px
                        overflow: scroll
                        .no-result
                            padding: 10px 10px
                            color: #666666
                            font-size: 10px
                            font-weight: normal
                        .group-label
                            padding: 8px 0px
                            color: #666666
                            font-size: 12px
                            text-align: left
                        .info-wrapper
                            cursor: pointer
                            display: flex
                            align-items: center
                            padding-bottom: 10px
                            .label-name
                                color: #333333;
                                font-size: 12px
                                line-height: 15px
                                height: 30px
                                padding-left: 10px
                                text-align: left
                                text-overflow: ellipsis
                                white-space: pre-wrap
                                overflow: hidden

@media all and (max-width: 768px)
    .home-main
        .cn
            padding: 20px 15px !important
            .home-main__content
                .searchBox
                    width: 100%
                    .search-result
                        width: 100%
                        max-width: 100%
                        .search-body
                            max-height: 420px
