.projectMiniCard
    flex-basis: 50%
    padding: 0 10px
    margin-bottom: 10px
    box-sizing: border-box
    position: relative
    .cardBody
        background: #fff
        border-radius: 0
        box-shadow: 0px 20px 20px rgba(0, 0, 0, 0.07)
        overflow: hidden
        .cardHeader
            position: absolute
            padding: 10px
            display: flex
            width: 100%
            box-sizing: border-box
        .coverImg
            cursor: pointer
            img
                &.preview
                    width: 100%
                    height: 80px
                    object-fit: cover
            .typeProject
                width: 30px
                height: 30px
                position: absolute
                display: block
                border: 2px solid #fff
                border-radius: 50%
                z-index: 1
                top: -15px
                right: -7px
                &.type-0
                    background linear-gradient(180deg, #F5A623 0%, #FBD249 100%)
                &.type-1
                    background linear-gradient(180deg, #43A047 0%, #C3DEA5 100%)
                &.type-2
                    background linear-gradient(180deg, #1AAAFF 0%, #5EEDFD 100%)
                img
                    &.type
                        width: 100%
                        height: 100%
                        transform: scale(0.5)

        .cardContent
            padding: 5px
            p
                text-overflow: ellipsis
                overflow: hidden
                text-align: left
                &.title
                    font-size: 14px
                    font-weight: 700
                    color: #333333
                    margin: 0
                    padding-top: 0
                    padding-left: 0
                    white-space: nowrap
                &.description
                    font-size: 12px
                    font-weight: 500
                    color: #969696
                    margin: 5px 0 0 0
                    line-height: 16px
                    height: 32px
            .activityWrapper
                margin-bottom: 10px
                .clickedPart
                    display: flex
                    justify-content: space-between
                    align-items: center
                    cursor: pointer
                    position: relative
                    .flexWrapper
                        margin-top: 10px
                        margin-right: 0
                        width: 100%
                        display: flex
                        justify-content: space-between
                        align-items: center
                        .progressBar
                            display: flex
                            flex-wrap: wrap
                            flex-basis: 100%
                            width: 100%
                            .progressWrapper
                                width: 100%
                                flex-basis: 100%
                                .values
                                    display: flex
                                    justify-content: space-between
                                    align-items: center
                                    span
                                        font-family: Roboto
                                        font-style: normal
                                        font-weight: 600
                                        line-height: 16px
                                        font-size: 12px
                                        color: #333333
                                        &.of
                                            &.text-right
                                                text-align: right !important
                                .label
                                    padding: 0
                                    display: flex
                                    justify-content: space-between
                                    align-items: center
                                    span
                                        font-family: Roboto
                                        font-style: normal
                                        font-weight: 600
                                        line-height: 16px
                                        font-size: 12px
                                        color: #969696
                                        &.of
                                            &.text-right
                                                text-align: right !important
                                .progress
                                    height: 10px
                                    border-radius: 5px
                                    background: #ddd
                                    position: relative
                                    .progressContain
                                        height: 10px
                                        border-top-left-radius: 5px
                                        border-bottom-left-radius: 5px
                                        position: absolute
                                        left: 0
                                        top: 0
                                        background: -webkit-gradient(linear, left top, right top, from(#1aaaff), to(#5eedfd))
                                        background: -webkit-linear-gradient(left, #1aaaff 0%, #5eedfd 100%)
                                        background: linear-gradient(90deg, #1aaaff 0%, #5eedfd 100%)