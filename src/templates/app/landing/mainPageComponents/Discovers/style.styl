@media all and (max-width: 425px)
    .discovers
        width: 100%
        margin: 0 auto
        .title
            margin: 0 0 10px 0
        .main
            ul
                padding: 0 10px
                li
                    flex-basis: 100%
                    display: none
                    &:first-child
                        display: block

@media (max-width: 575.98px)
	.discovers
        width: 100%

