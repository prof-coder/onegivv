@import './LovedProject/style.styl'

.discovers
    margin: 20px auto
    .title
        margin: 30px 0 10px 0
        text-align: center
        color: #1AAAFF
        font-size: 24px
        font-weight: bold
        line-height: 28px
    .sub-title
        margin: 10px 0
        text-align: center
        color: #324148
        font-size: 16px
        font-weight: normal
        font-style: normal
        line-height: 24px
    .main
        padding: 0 15px
        .caption
            font-size: 18px
            font-weight: bold
            color: #324148
            line-height: 24px
            margin: 30px 0 10px 0
        ul
            margin: 0
            padding: 0
            list-style: none
            display: flex
            align-items: center
            justify-content: space-around
            li
                display: block
                flex-basis: 25%
                list-style-type: none
        .more
            font-size: 12px
            font-weight: normal
            color: #324148
            text-align: right
            margin: 5px 0
            cursor: pointer
            padding: 0 20px
    
