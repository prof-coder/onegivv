@keyframes fadeIn {
   from {
      opacity: 0;
   }
   to {
      opacity: 1;
   }
}

.fade-in {
  opacity: 0;
  animation: fadeIn ease-in 1;
  animation-fill-mode: forwards;
  animation-duration: 0.2s;
}

@keyframes fadeOut {
   from {
      opacity: 1;
   }
   to {
      opacity: 0;
   }
}

.fade-out {
  opacity: 1;
  animation: fadeOut ease-in-out 1;
  animation-fill-mode: forwards;
  animation-duration: 0.2s;
}

.fade-out {
	-webkit-animation-name: fadeOut;
    animation-name: fadeOut;
}

