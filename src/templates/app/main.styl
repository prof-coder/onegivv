		background-size 50%
		background-repeat no-repeat
		background-position center 40%
		background-image url("/images/ui-icon/placeLogoToMob.svg")
		height 100vh
		.buttonToApp
			position absolute
			bottom 150px
			left 50%
			white-space nowrap
			transform translateX(-50%)
			display block
