@keyframes animation-w3w02u
	100%
		transform: rotate(360deg);

@keyframes click-effect-g
	0%
		transform scale(0, 0)
		opacity 1
	20%
		transform scale(25, 25)
		opacity 1
	100%
		opacity 0
		transform scale(40, 40)

