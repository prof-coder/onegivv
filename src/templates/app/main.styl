#loading
	position: fixed;
	top: 0;
	right: 0;
	bottom: 0;
	left: 0;
	background-color: rgba(0,0,0,0.3);
	display: flex;
	z-index: 1000;
	-webkit-transition: 0.3s;
	transition: 0.3s;
	justify-content: center;
	align-items: center;
	&.hide
		visibility: hidden;
		opacity: 0;
	&.show
		visibility: visible;
		opacity: 1;
	.spinner-wrapper
		background #fff
		width: 200px;
		height: 120px;
		border-radius: 10px;
		box-shadow 0px 10px 20px rgba(0,0,0,0.25)
		display: flex;
		justify-content: center;
	.spinner
		position: relative;
		width: 77.1429px;
		height: 77.1429px;
		align-self center
		animation: animation-w3w02u 0.6s linear 0s infinite normal forwards running;
		.item1
			opacity: 0.1;
			border-width: 8.57143px;
			border-style: solid;
			border-color: $first-color;
			border-image: initial;
			width: 60px;
			height: 60px;
			border-radius: 100%;
		.item2
			width: 8.57143px;
			height: 8.57143px;
			border-radius: 100%;
			background-color: $first-color;
			opacity: 0.8;
			position: absolute;
			top: 25.7143px;
			animation: animation-w3w02u 0.6s linear 0s infinite normal forwards running;

