.share-modal
	.modalContent
		width 560px
	.sharing-list
		padding-left 0
		margin-top 1.5rem
		padding-top 1.5rem
		border-bottom 1px solid #ddd
		border-top 1px solid #ddd
		margin-bottom 3rem
	.sharing-list-item
		width 25%
		text-align center
		display inline-block
		list-style none
		padding-bottom 1.5rem
		.button
			cursor pointer
		a
			color #000
			&:hover
				color #000
		.svg-icons
			display block
			width 2.1em
			margin-bottom 1rem
			margin-left auto
			margin-right auto
			svg
				display inline-block
				vertical-align bottom
	.sharing-copy-form
		display -webkit-box
		display -ms-flexbox
		display flex
		.sharing-copy--input
			width calc(100% - 115px)
			padding-right 15px
			position relative
			span
				display block
				position absolute
				top -10px
				left 25px
				padding 0 6px
				background #fff
				letter-spacing 0.06em
				color #6f6f6f
				user-select none
				z-index 10
			.searchInput
				display block
				width 100%
				height 100%
				border 1px solid #ddd
				padding .75rem 1rem
		.sharing-copy-button-wrapper
			width 115px
			display inline-block
			.sharing-copy-button
				display block
				width 100%
				background-color #00b964
				border 1px solid transparent
				color #fff
				font-weight bold
				font-size 1rem
				min-height 3rem
				padding-bottom .75rem
				padding-top .75rem
				cursor pointer
	.sharing-options
		text-align center
		font-size 16px
		background-color #fbf8f6
		border-radius .25rem
		padding 1rem
		margin-top 1rem
		position relative
	.sharing-options-copied
		color #00b964
		position absolute
		top 17px
		left 30px
	.sharing-options--icons
		max-width 18rem
		display flex
		-webkit-box-pack justify
		-ms-flex-pack justify
		justify-content space-between
		font-size 2rem
		margin 0 auto
		align-items center
		color #333
		margin-top 0.75rem
		.svg-icons
			color inherit
			display inline-block
			flex-shrink 0
			max-height 1.1875em
			max-width 1.1875em
			pointer-events none
			width 38px
			height auto
			vertical-align bottom
@media only screen and (max-width: 768px)
	.share-modal
		.modalContent
			width 100%
			padding 1rem
			margin-top 0
			margin-bottom 0
			padding-bottom 2rem
		.sharing-list
			padding 0
		.sharing-list-item
			display block
			width 100%
			border-bottom 1px solid #ddd
			padding-bottom 0
			text-align left
			.button
				display -webkit-box
				display -ms-flexbox
				display flex
				-webkit-box-align center
				-ms-flex-align center
				align-items center
				padding 0.6rem 0
				font-size .875rem
			.svg-icons
				margin 0 0.5rem 0 0
		.sharing-copy-form 
			.sharing-copy--input 
				.searchInput
					cursor pointer
@media (max-width: 620px)
	.share-modal
		.modalContent
			.share-component
				padding 0 0.5rem