.SidebarRight
	position sticky
	top 0
	.rightFollowBlock
		position relative
		top 40px
		width 256px
		box-sizing border-box
		background #FFFFFF
		box-shadow 0px 1px 5px rgba(0, 0, 0, 0.1)
		border-radius 8px
		padding 10px 16px 16px 16px
		.followersHeader
			margin 0 0 10px 0
			font-weight 500
			line-height 23px
			font-size 16px
			color #999999
		.divider
			height 1px
			margin 0 0 16px -16px
			width calc(100% + 32px)
			background linear-gradient(90deg, #AB64F5 0%, #62DBF6 100%)
		.searchInputWrapper
			position relative
			input.searchFollowers
				background #FFFFFF
				position relative
				width 100%
				border 1px solid #DDDDDD
				outline none 
				height 32px
				box-sizing border-box
				z-index 2
				border-radius 32px
				padding 4px 30px
				background-color transparent
				font-family 'Open Sans'
				font-size 14px
				color #999999
				+ .placeholder
					position absolute
					font-family 'Open Sans'
					font-size 14px
					transition .3s
					opacity 1
					z-index 1
					color #999999
					top 6px
					left 35px
				&:not([value=""]),
				&:focus
					+ .placeholder
						transition .3s
						left 70px
						opacity 0
			.iconForPlaceholder
				position absolute
				top 10px
				left 10px
				height 12px
				width 12px
				background-image url("/images/ui-icon/sidemenu/search_icon_follow.svg")
		ul.followersBlock
			padding 0
			li.singleFollower
				list-style none
				padding 16px 0
				cursor pointer
				border-bottom 1px solid #DDDDDD
				&:last-of-type
					border-color transparent
				.avatarFollower
					width 32px
					height 32px
					margin-right 8px
					border-radius 16px
					float left
					position relative
				.infoUserWrapper
					.userName
						font-weight 500
						margin-bottom 4px
						font-size 14px
						text-transform capitalize
						color #333333
					.userDescription
						line-height 17px
						font-size 12px
						color #999999
		.showMoreFollowers
			left 64%