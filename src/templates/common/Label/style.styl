.label
	padding 0 10px
	text-align left
	.main-font
		&.sharer
			margin-top: -3px
	.line
		m-flex(flex-start)
		span 
			margin-right 5px
		.label
			font-weight: normal
			padding: 0
		.name
			m-font(Roboto, normal, 500, 16px, 14px)
			word-break break-word
			white-space pre-wrap
			margin-right 0
			color #333333
			text-overflow ellipsis
			&.blue
				color: #7CB8FF
		.check-mark
			margin-left: 15px
			&.sharer
				margin-left: 60px
		&.line-date
			margin-top 3px
		.location, 
		.date
			m-font(Roboto, normal, normal, 14px, 12px)
			text-overflow ellipsis
			color #999
		.last-view
			m-font(Roboto, normal, normal, normal, 12px)
			color: rgba(51, 51, 51, 0.2);