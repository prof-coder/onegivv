.LayoutModal
	position fixed
	width 100vw
	height 100vh
	background-color rgba(0, 0, 0, .3)
	top 0
	left 0
	display flex
	z-index 999
	opacity 0
	transition .3s
	visibility hidden
	justify-content center
	align-items center
	overflow-y scroll
	&.open
		opacity 1
		visibility visible
	.wrapperForForm
		top 0
		left 0
		right 0
		margin 50px auto 0px
		width fit-content
		transform none
		position absolute
		.tr-footer
			width 100%
			height 100px
			background transparent