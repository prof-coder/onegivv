.MyEditor
	display flex
	flex-direction column
	justify-content center
	align-items center
	h3
		font-weight: bold
		font-size: 24px
		text-align: center
		color: #333333
		margin 24px 0 33px 0
	.submitPhotoEdit
		margin-top 11px
	input[type=range] {
		-webkit-appearance: none;
		width: 100%;
		margin: 23px 0;
	}
	input[type=range]:focus {
		outline: none;
	}
	input[type=range]::-webkit-slider-runnable-track {
		width: 100%;
		height: 2px;
		cursor: pointer;
		box-shadow: 1px 1px 1px rgba(0, 0, 0, 0.03), 0px 0px 1px rgba(13, 13, 13, 0.03);
		background:  linear-gradient(90deg, $first-color 0%, $second-color 100%);
		border-radius: 0px;
		border: 0px solid rgba(1, 1, 1, 0);
	}
	input[type=range]::-webkit-slider-thumb {
		box-shadow: 1px 1px 1px rgba(0, 0, 0, 0.22), 0px 0px 1px rgba(13, 13, 13, 0.22);
		border: 0px solid rgba(0, 0, 0, 0);
		height: 16px;
		width: 16px;
		border-radius: 50px;
		background:  linear-gradient(90deg, $first-color 0%, $second-color 100%);
		cursor: pointer;
		-webkit-appearance: none;
		margin-top: -7px;
	}
	input[type=range]:focus::-webkit-slider-runnable-track {
		background: $first-color;
	}
	input[type=range]::-moz-range-track {
		width: 100%;
		height: 2px;
		cursor: pointer;
		box-shadow: 1px 1px 1px rgba(0, 0, 0, 0.03), 0px 0px 1px rgba(13, 13, 13, 0.03);
		background:  linear-gradient(90deg, $first-color 0%, $second-color 100%);
		border-radius: 0px;
		border: 0px solid rgba(1, 1, 1, 0);
	}
	input[type=range]::-moz-range-thumb {
		box-shadow: 1px 1px 1px rgba(0, 0, 0, 0.22), 0px 0px 1px rgba(13, 13, 13, 0.22);
		border: 0px solid rgba(0, 0, 0, 0);
		height: 16px;
		width: 16px;
		border-radius: 50px;
		background:  linear-gradient(90deg, $first-color 0%, $second-color 100%);
		cursor: pointer;
	}
	input[type=range]::-ms-track {
		width: 100%;
		height: 2px;
		cursor: pointer;
		background: transparent;
		border-color: transparent;
		color: transparent;
	}
	input[type=range]::-ms-fill-lower {
		background:  linear-gradient(90deg, $first-color 0%, $second-color 100%);
		border: 0px solid rgba(1, 1, 1, 0);
		border-radius: 0px;
		box-shadow: 1px 1px 1px rgba(0, 0, 0, 0.03), 0px 0px 1px rgba(13, 13, 13, 0.03);
	}
	input[type=range]::-ms-fill-upper {
		background:  linear-gradient(90deg, $first-color 0%, $second-color 100%);
		border: 0px solid rgba(1, 1, 1, 0);
		border-radius: 0px;
		box-shadow: 1px 1px 1px rgba(0, 0, 0, 0.03), 0px 0px 1px rgba(13, 13, 13, 0.03);
	}
	input[type=range]::-ms-thumb {
		box-shadow: 1px 1px 1px rgba(0, 0, 0, 0.22), 0px 0px 1px rgba(13, 13, 13, 0.22);
		border: 0px solid rgba(0, 0, 0, 0);
		height: 16px;
		width: 16px;
		border-radius: 50px;
		background:  linear-gradient(90deg, $first-color 0%, $second-color 100%);
		cursor: pointer;
		height: 2px;
	}
	input[type=range]:focus::-ms-fill-lower {
		background: $first-color;
	}
	input[type=range]:focus::-ms-fill-upper {
		background: $first-color;
	}
	.absoluteBorderForCropper
		position absolute
		width 250px
		top 153px
		pointer-events none