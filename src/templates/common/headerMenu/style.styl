@import './FollowNoti/style.styl'
@import './NotifyItem/style.styl'

.headerMenu
	flex 1
	position relative
	max-width: 70px
	.desktop-view
		display block
	.mobile-view
		display none
	.noti-icon
		position relative
		margin-right 10px
		cursor pointer
		.menu-notify
			width 22px
			height 22px
			background-image url('/images/ui-icon/landing/icon-notify.svg')
			background-repeat round
		.notify-count
			background #FF3627
			m-font(Roboto, normal, bold, normal, 12px)
			color #fff
			m-flex()
			width 18px
			height 18px
			border-radius 50%
			position absolute
			top -10px
			right -5px
		.notify-list
			background #fff
			box-shadow 0px 4px 4px rgba(0, 0, 0, 0.25)
			border-radius 0
			position relative
			margin-top 16px	
			position absolute
			padding 10px 15px
			margin 0px
			top 45px
			right -40px
			width 300px
			display none
			&.open
				display block
			&:after
				content: ' ';
				position: absolute;
				top: -8px;
				right: 41px;
				border-bottom: 15px solid #fff;
				border-left: 10px solid transparent;
				border-right: 10px solid transparent;
				width: 0;
				height: 0;
			.title-row
				m-flex(space-between)
				border-bottom 1px solid #CCCCCC
				padding 6px 0px
				._title
					m-font(Roboto, normal, bold, normal, 14px)
					color #666
				.noti-type
					m-flex()
					.noti-but
						position relative						
						border 1px solid #CCCCCC
						padding 3px
						border-radius 50%
						&.noti
							margin-right 10px
						._icon
							width 15px
							height 15px							
							background-repeat round
							&.noti
								background-image url('/images/ui-icon/landing/icon-notify.svg')
							&.add
								background-image url('/images/ui-icon/sidemenu/menu_volunteer.svg')	
						._count
							background #FF3627
							m-font(Roboto, normal, bold, normal, 12px)
							color #fff
							m-flex()
							width 18px
							height 18px
							border-radius 50%
							position absolute
							top -10px
							right -7px
						&.active
							border 1px solid $first-color
							._icon
								&.noti
									background-image url('/images/ui-icon/landing/active-icon-notify.svg')
								&.add
									background-image url('/images/ui-icon/sidemenu/active_menu_volunteer.svg')	
			.notification-list				
				max-height 50vh
				overflow-y scroll
				.notification-type-title
					color: #666666
					margin: 25px 0 0px 0
	.menu-toggle
		width 22px
		height 22px
		background-image url('/images/ui-icon/landing/menu-toggle.svg')
		background-repeat round
	.wrapper
