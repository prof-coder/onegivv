		.toggleProfile
			position relative
			cursor pointer
			margin-right 15px
			.profile
				display block
				width 22px
				height 22px
				pointer-events none
				background-image url('/images/ui-icon/icon-profile.svg')
				background-repeat round
		.toggleBlockForMenu			
