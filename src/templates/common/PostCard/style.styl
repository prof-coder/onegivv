.postCard
    &.post
        width: 620px
        max-width: 620px
        border-radius: 0
        box-shadow: 0px 0px 20px rgba(0, 0, 0, 0.15)
        background-color: #ffffff
        .float-right
            float: right
        .float-left
            float: left
        &.card-mail-class
            border-radius: 0
            box-shadow: 0px 0px 20px rgba(0, 0, 0, 0.15)
        &.open
            margin: 0px
            .post-main
                // box-shadow: 0px 5px 15px rgba(0, 0, 0, 0.15);
                .description
                    max-height: 200px
                    overflow-y: auto
                    padding: 0 35px
                    .text
                        max-height: unset
                        &:after
                            display: none
        .post-main
            padding: 0
            .post-header
                m-flex(justifyContent = space-between)
                padding: 20px 35px 0 35px
                margin-bottom: 24px
                a
                    text-decoration none
                .info-wrapper
                    m-flex(flex-start)
                    .sharerOtherAvatar
                        display: inline-flex
                    .name
                        font-size: 18px
                        line-height: 20px
                .post-more-btn
                    .action
                        cursor: pointer
                        float: right
                        border: none
                        outline: none
                        background: none
                        color: #CCCCCC;
                        font-size 18px
                        padding 0px 10px
                        margin-top: -35px
                        margin-right: -30px
                    .edit-menu
                        right: 30px
                        top 50px
                        z-index: 30
                        margin-top: 10px;
                        background: white
                        box-shadow: 0px 10px 20px rgba(0, 0, 0, 0.1);
                        border-radius 0
                        overflow hidden
                        position: absolute
                        transition: .3s
                        font-size: 14px
                        height: 0
                        .submenu
                            display: flex
                            align-items: center
                            color: #666666;
                            cursor: pointer
                            &.edit
                                padding: 10px 15px 3px
                            &.trash
                                padding: 3px 15px 10px
                            ._label
                                margin-left: 8px
                                font-size: 14px;
                                font-weight: normal
                                line-height: normal
                        &.open
                            height: auto
                            transition: .3s
                            overflow unset
            .post-preview
                position relative     
                max-height 290px
                .preview
                    size(620px, 290px)
                    max-height 290px
                    object-fit cover
                .preview-video
                    size(620px, 290px)
                    max-height 290px
                    video
                        max-height 290px
                        object-fit fill
                img.type
                    transform scale(0.5)
                .type-post
                    size(40px, 40px)
                    disp-pos(absolute)
                    border 2px solid white
                    border-radius 50%
                    z-index 1
                    top 25px
                    left 25px
                    &.type-0
                        background #3CC267
                    &.type-1
                        background #FB9E73
                    &.type-2
                        background #5A9EFB
                .like-box
                    size(75px, 32px)
                    disp-pos(absolute)
                    bottom: 30px
                    right 20px
                    .box
                        size(100%, 100%)
                        background: #000000;
                        opacity: 0.5;
                        border-radius: 20px;
                        margin-top: -32px;
                    .like
                        size(16px ,14px)
                        margin: 9px 10px 9px 16px;
                        vertical-align: middle
                        position:relative
                        filter: brightness(255)
                        z-index: 2
                    ._label
                        font-family: Open Sans;
                        font-style: normal;
                        font-weight: normal;
                        line-height: normal;
                        font-size: 12px;
                        color: #FFFFFF;
                        position:relative
                        z-index: 2
            ._title
                margin: 10px 0px
                padding: 0 35px
                color: #333333;
                m-font(Roboto, normal, normal, 32px, 24px)  
            .description
                margin: 10px 0px 20px 0
                position relative
                padding: 0 35px
                .text
                    white-space pre-wrap
                    color #666666
                    m-font(Roboto, normal, normal, 24px, 16px)
                    position relative	
                    margin 0
                    text-align left
                    // border-bottom 1px solid #DDDDDD
                    padding-bottom 20px
                    height: 96px
                    text-overflow: ellipsis
                    overflow: hidden
                    &:after
                        size(100%, calc(100% + 10px))
                        content ''
                        top -10px
                        position absolute
                        display block
                        // background linear-gradient(to bottom, rgba(255, 255, 255, 0) 0%, rgba(255, 255, 255, 0.75) 100%)
            .postBottom
                margin-top: 10px
                margin-bottom: 15px
                position: relative
                padding: 0 15px
                .statusBody
                    padding: 15px 20px
                    display: flex
                    justify-content: space-between
                    border-bottom: 2px solid #E0E0E0
                    > div
                        img
                            vertical-align: middle
                        span
                            margin-left: 10px
                            color: #828282

                .actionBody
                    padding: 15px 20px
                    display: flex
                    justify-content: space-between
                    .socialButton
                        padding: 0 50px 0 0
                        &.heart
                            > img
                                width: 22px
                        img
                            cursor: pointer
                            vertical-align: middle
                            &.supportIcon, &.shareIcon
                                margin-left: 10px
                        span
                            cursor: pointer
                            margin-left: 10px
                            color: #000000
                            font-size: 15px
                            line-height: 21px
                            &:first-child
                                margin-left: 0
        .post-comment
            display: none
            padding: 23px
            &.active
                display: block
                transition: display .5s
            .post-comment-list
                max-height 300px
                overflow-y auto
                margin-bottom 10px
                .comment-title
                    color: #333333;
                    m-font(Roboto, normal, normal, 32px, 18px)
                    margin-top: 0px
                    margin-bottom: 9px
                .comment-no
                    color: #999
            .leave-comment
                .comment-wrapper
                    display: flex
                    .comment-input
                        width: calc(100% - 32px)
                        border: 1px solid #e0e0e0;
                        box-sizing: border-box;
                        border-radius: 0
                        padding: 6px 15px
                        margin-left: 10px
                        display: flex
                        justify-content: space-between
                        #projectFileCreate
                            display: none
                        ._input
                            border: none
                            outline: none
                            width: 100%
                            &::placeholder
                                color: #B9BFCA;
                        .comment-button 
                            float: right
                            margin-top: 3px
                            padding: 0px 5px
                            color: #CCCCCC
                            border: none
                            outline: none
                            background: transparent
                    .btn-comment
                        margin-left 5px

.post-comment-list
    .comment-section
        .comment-view-wrapper            
            margin-bottom: 20px
            .avatar-text
                display: flex
                align-items: center
                .comment-text
                    max-width: 100%
                    background: #FAFAFA;
                    box-shadow: 0px 1px 3px rgba(0, 0, 0, 0.2);
                    border-radius: 8px;
                    padding: 5px 8px
                    margin-left: 8px
                    color: #333333;
                    m-font(Roboto, normal, normal,  14px, 12px)
                    ._name
                        font-weight: 800
                        margin-right: 10px
            .comment-bot
                margin: 5px 40px
                m-flex(flex-start)
                .comment-time
                    color: #CCCCCC;
                    m-font(Roboto, normal, normal, normal, 12px)
                    margin-right: 10px
                .comment-reply
                    padding: 0px 10px
                    color: #666
                    m-font(Roboto, normal, normal, normal, 14px)
                    margin-right 10px
                    cursor pointer
                    &.active
                        color $first-color
                .comment-trash
                    color #666
                    m-font(Roboto, normal, normal, normal, 14px)
                    cursor pointer

@media all and (max-width: 768px)
    .postCard
        &.post
            width unset
            .post-main
                .post-header
                    padding: 20px 15px 0 15px
                    .post-more-btn
                        .action
                            margin-top: -20px
                            margin-right: -5px
                .post-preview
                    padding: 0 10px
                    .preview
                        width: 100%
                .postBottom
                    .statusBody
                        padding: 15px 5px
                    .actionBody
                        padding: 15px 0
                        .socialButton
                            padding: 0 10px 0 0
                            span
                                margin-left: 5px
                                font-size: 11px
                                line-height: 14px
                            img
                                &.supportIcon, &.shareIcon
                                    margin-left: 3px