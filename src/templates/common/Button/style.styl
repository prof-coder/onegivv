.button-main-class
  position: relative
  outline: none
  border-radius: 0
  cursor: pointer
  overflow: hidden
  font-weight: 600
  border: none
  background: linear-gradient(to right, $first-color 2.75%, $second-color 88.2%)
  m-flex()
  &[disabled]
    opacity: 0.4
    background: gray
  ._label
    font-weight: 400
    line-height: normal
    color: #FFF
    pointer-events: none;
    position: relative
    z-index: 0
    margin: 0
    word-break: keep-all
  &:focus:not(:active)::after
    animation: click-effect 1s ease-out
  &.solid
    background: $first-color
    &.border
      &:before
        content: "";
        z-index: 0;
        position: absolute;
        background: $first-color
        width: calc(100% - 4px);
        height: calc(100% - 4px);
        top: 2px;
        left: 2px;
        border-radius: 30px;
    ._label
      color #ffffff
  &.inverse
    border: 2px solid #ffffff
    background: #ffffff
    &.border
      &:before
        content: "";
        z-index: 0;
        position: absolute;
        background-color: #fff;
        width: calc(100% - 2px);
        height: calc(100% - 2px);
        top: 1px;
        left: 1px;
        border-radius: 30px;
    ._label
      color $first-color
  &.sameOutline
    border 2px solid #1AAAFF

button,
a
  &::-moz-focus-outer,
  &::-moz-focus-inner,
  &:focus
    border 0
    outline none
    outline none
    
@keyframes click-effect
  0%
    transform: scale(0, 0);
    opacity: 1;
  20%
    transform: scale(25, 25);
    opacity: 1;
  100%
    opacity: 0;
    transform: scale(40, 40);