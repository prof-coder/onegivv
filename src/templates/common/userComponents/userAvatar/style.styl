disp-pos(pos = static, disp = block)
	position pos
	display disp
size(w, h)
	width w
	height h

set-posLT(l, t)
	left l
	top t
set-posBR(b, r)
	bottom b
	right r

.UserAvatar
	position relative
	cursor pointer
	m-flex(alignItems = flex-end)
	&.sharer
		width: 52px !important
		height: 52px !important
		margin-top: 3px !important
	&.self
		margin-left: -15px
	.avatar-wrapper
		disp-pos(pos = relative)
		border-radius 50%
		border: 2px solid $blue-color
		&.sharer
			width: 52px !important
			height: 52px !important
			min-width: 52px !important
			min-height: 52px !important
		.avatar
			disp-pos(pos = relative)
			size(100%, 100%)
			border-radius 50%
			transform: scale(1)
			background white
		&:before
			disp-pos(pos = absolute)
			size(100%, 100%)
			set-posLT(0, 0)
			content ''
			border-radius 50%
			// background linear-gradient(90deg, $first-color 0%, $second-color 100%);
	
	.typeWrapper	
		disp-pos(pos = absolute)
		size(13px, 13px)
		set-posBR(0, 0)
		m-flex()
		background #A994FF
		border 1px solid #fff
		border-radius 50%
		.iconType
			disp-pos(pos = absolute)
			size(100%, 100%)
			color #fff
			text-align center
			font-size 10px
			background-position center
			background-size cover			
			&.userType3
				background-image url("/images/ui-icon/role/Nonprofit.svg")
				background-repeat no-repeat
			&.userType4
				background-image url("/images/ui-icon/role/Donor.svg")
				background-repeat no-repeat
			&.userType5
				background-image url("/images/ui-icon/role/Student.svg")
				background-repeat no-repeat
	.self-avatar
		disp-pos(pos = absolute)
		size(32px, 32px)
		left 0
		object-fit cover
		border-radius 50%
	.point
		disp-pos(pos = absolute)
		size(5px, 5px)
		top 0
		right 0
		border-radius 50%
		&.online
			background #84D751
		&.offline
			background #FF9F81
