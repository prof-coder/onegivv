.devPlaceholder
	max-width $max-card-width
	min-height 315px
	position relative
	display flex
	justify-content center
	flex-direction column
	align-items center
	margin 16px auto 0 auto
	background #FFFFFF
	box-shadow 0px 1px 5px rgba(0, 0, 0, 0.1)
	border-radius 8px
	padding 0 15px
	h2
		font-weight 500
		line-height 32px
		margin 0
		font-size 24px
		color #333333
	h4
		margin 0
		margin-top 20px
		font-family 'Open Sans'
		font-style normal
		font-weight normal
		line-height 24px
		font-size 14px
		color #666666
	img
		position absolute
		&:nth-of-type(1)
			left 16px
			top 91px
		&:nth-of-type(2)
			right 62px
			top 28px
			transform rotate(270deg)
		&:nth-of-type(3)
			right 45%
			bottom 18px
			transform rotate(90deg)