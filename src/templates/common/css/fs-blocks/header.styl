@import "../vars.styl";

/*--------------------------------------------------------------
# header Styles
--------------------------------------------------------------*/

.header {
  position: sticky;
  background-color: #ffffff;
  top: 0
  width: 100%;
  transition: all 0.3s;
  box-shadow: 0 10px 20px rgba(0,0,0,.1);
  z-index: 130;

  .cn {
    flex-flow: row nowrap;
    align-items: center;
    justify-content: space-between;
    width: 100%;
    max-width: 100%;
  }
  &-top {
    padding: 8px 0 3px;
    &__logo {
      max-width: 181px;
      @media screen and (max-width: 768px) {
        display: block;
        flex: 1 1 auto;
        margin-left: 10px;
        margin-right: 10px;
        text-align: center;
      }
    }

  }
  .search {
    // max-width: 300px;
    // margin-right: 2vw;
    margin: auto
    .search-field {
      padding: 11px 35px 11px 15px;
      border-bottom: 1px solid #E0E0E0;
      color: #000000;
      line-height: 1.7;
    }
    button {
      color: #000000;
      background-color: transparent;
    }
  }
}

.header-description {
  position: relative;
  display: flex;
  flex-direction: column;
  justify-content: flex-end;
  height: 100%;
  min-height: 60vh;
  background-repeat: no-repeat;
  background-position: center;
  background-size: cover;
  padding: 15vh 0 7vh;
  box-shadow: 0 4px 10px rgba(0, 0, 0, 0.15);

  @media screen and (min-width: 768px) {
    min-height: 34vw;
  }

  &__content {
    width: 100%;
  }

  &__title {
    margin: 0;
    font-family: $montserrat-font;
    font-weight: 600;
    font-size: 68px;
    line-height: 1.2;
    color: #FFFFFF;
    @media screen and (min-width: 768px) {
    }
  }

  &__description {
    margin: 10px 0 0 0;
    max-width: 634px;
    font-size: 21px;
    line-height: 1.5;
    color: #F2F2F2;
  }
}