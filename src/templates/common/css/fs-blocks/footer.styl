@import "../vars.styl";

/*--------------------------------------------------------------
# footer Styles
--------------------------------------------------------------*/

.footer {
  padding: 34px 15px 25px 15px;
  display: flex;
  flex-direction: column;
  &-top {
    margin-bottom: 20px;
    @media screen and (min-width: 1050px) {
      margin-bottom: 0;
    }
  }
  &-middle {
    flex-direction: row;
    justify-content: space-between;
    @media screen and (min-width: 1050px) {
      flex-wrap: nowrap;
    }
  }

  &__title {
    font-family: $montserrat-font;
    font-weight: 600;
    font-size: 20px;
    line-height: 24px;
    color: #000000;
  }

  &-nav {
    display: none;
    margin-bottom: 20px;
    @media screen and (min-width: 480px) {

    }
    @media screen and (min-width: 580px) {
      display: flex;
      flex-direction: row;
      justify-content: space-between;
      flex: 1 0 454px;
    }

    @media screen and (min-width: 992px) {
      padding-right: 10vw;

    }

    @media screen and (min-width: 1050px) {
      margin-bottom: 0;
    }
    &--link {
      margin: 2px 0 3px;
      font-size: 15px;
      line-height: 25px;
      color: #828282;
      cursor: pointer;
    }

    &-learn,
    &-company,
    &-legal {
      display: flex;
      flex-direction: column;
    }
  }

  &-subscribe {
    display: flex;
    flex-direction: column;
    width: 100%;
    @media screen and (min-width: 992px) {
      width: auto;
    }
  }

  .zeroBorderRadius {
    border-radius: 0 !important;
  }

  .form {
    display: flex;
    flex-direction: column;
    @media screen and (min-width: 480px) {
      flex-direction: row;

    }
    &__label {
      width: 100%;
      @media screen and (min-width: 480px) {
        width: auto;
        min-width: 250px;
        margin-right: 5px;
        margin-bottom: 0;
        flex: 1 1 auto;
      }
    }
    &__control {
      border: 2px solid #E0E0E0;
      padding: 18px 23px;
      background-color: #FFFFFF;
      color: #000000;
      &::placeholder {
        color: #E0E0E0;
        font-size: 12px;
        line-height: 1.4;
      }
    }
    .btn {
      font-family: $montserrat-font;
      min-width: 1px;
      @media screen and (min-width: 480px) {
        max-width: 250px;

      }
    }
  }

  &-bottom {
    padding-top: 52px;
  }

  &-copy {
    text-align: right;
    font-size: 12px;
    color: #4F4F4F;
  }
}