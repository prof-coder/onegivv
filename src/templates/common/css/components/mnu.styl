.cat-mnu {
  list-style-type: none;
  margin: 0;
  padding: 0;
  border: 1px solid rgba(#001A35, 0.1);
  box-shadow: 0 0 4px rgba(0, 0, 0, 0.25);

  li {
    border-bottom: 1px solid rgba(#001A35, 0.1);
    transition: all 0.2s ease-in;

    &:last-child {
      border-bottom-width: 0;
    }

    &.menu-item-has-children {
      & > a {
        position: relative;
        .sub-menu-toggle {
          position: absolute;
          top: 0;
          right: 0;
          bottom: 0;
          width: 30px;
          display: flex;
          align-items: center;
          justify-content: center;
          transform: rotate(0deg);
          transition: all 200ms ease-in;
          &.on {
            transform: rotate(180deg);
          }
        }
      }
    }

    @media screen and (min-width: 768px) {

    }

    a {
      background-color: #fbfcff;
      display: block;
      padding: 20px 30px;
      font-family: $montserrat-font;
      font-size: 15px;
      line-height: 1.2;
      color: rgba(#001a35, 0.5);
      transition: all 0.2s ease-in;
      &:hover {
        color: rgba(#001a35, 1);
        background-color: $orange;
      }
    }

    .sub-menu {
      display: none;
      list-style-type: none;
      padding-left: 0;
      margin: 0;
      li {
        a {
          background-color: #f8f8f8;
          transition: all 200ms ease-in;
          &:hover {
            background-color: #f1f1f1;
          }
        }
        &.current-menu-item {
          a {
            background-color: #f1f1f1;
            color: rgba(#001a35, 1);
          }
        }
      }
    }
  }
  & > .current-menu-item {
    & > a {
      border-left: 5px solid $d-orange;
      background-color: $orange;
      font-weight: 600;
      color: rgba(#001a35, 1);
    }
  }

}

