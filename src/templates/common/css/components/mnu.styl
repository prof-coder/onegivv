//Toggle Mnu
.toggle-mnu {
  position: relative;
  top: 18px;
  z-index: 10;
  transform: translate(0, -50%);
  display: inline-block;
  vertical-align: middle;
  width: 28px;
  height: 28px;

  span:after, span:before {
    content: "";
    position: absolute;
    left: 0;
    top: 9px;
    z-index: 4;
  }

  span:before {
    width: 100%;
  }

  span:after {
    top: 18px;
    width: 100%;
  }

  span {
    position: relative;
    display: block;
    width: 100%;
  }

  span, span:after, span:before {

    height: 2px;
    background-color: #000;
    backface-visibility: hidden;
    //border-radius: 2px;
    transition: all 0.3s;
  }

  &.on span {
    background-color: transparent;

  }

  &.on span:before {
    transform: rotate(45deg) translate(-1px, 0px);
    background-color: #000;
  }

  &.on span:after {
    transform: rotate(-45deg) translate(6px, -7px);
    background-color: #000;
  }
}


