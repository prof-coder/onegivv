@import '../vars.styl';

/*--------------------------------------------------------------
# MNU Styles
  --------------------------------------------------------------*/
.main-mnu {
  // display: inline-block;
  display: flex;
  vertical-align: middle;
  text-align: right;

  ul {
    display: flex;
    justify-content: flex-end;
    align-items: stretch;
    height: 100%;
    margin: 0;
    padding: 0;
    list-style-type: none;
  }

  li {
    position: relative;
    display: inline-block;
    padding: 15px 0;

   &.has-current-menu-item {
     a {
       color: $blue;
     }
   }
  }


  > ul {
    > li {
      > a {
        position: relative;
        display: inline-block;
        margin: 0 20px;
        border-bottom: 1px solid transparent;
        font-family: $montserrat-font;
        //font-size: 13px;
        //font-weight: 500;
        text-align: center;
        color: #000;
        text-transform: uppercase;
        text-decoration: none;
        transition: all 200ms ease-in-out;

        > span {
          font-size: 13px;
        }

        &:hover {
          color: $blue;
          //border-bottom: 1px solid #fff;
        }
      }

      &.menu-item-has-children {
        & > a {
          .sub-menu-toggle {
            display: inline-block;
            vertical-align: middle;
            transition: all 200ms ease-in;
            transform: rotate(0deg);
            &.on {
              transform: rotate(180deg);
            }
          }
        }

        &:hover {
          & > a {
            .sub-menu-toggle {
              transform: rotate(180deg);
            }
          }
        }
      }

      &.current-menu-item {
        & > a {
          color: $blue;
          font-weight: normal;
        }
      }

      & > .sub-menu {
        position: absolute;
        top: 100%;
        display: none;
        width: 300px;
        height: auto;
        //border-top: 15px solid transparent;
        background-color: #fff;
        z-index: 1;

        li {
          display: block;
          border-top: 1px solid rgba(255, 255, 255, 0.1);
          transition: all 200ms ease-in;

          &:last-child {
            //border-bottom-color: transparent;
            margin-bottom: 0;
          }

          &:hover {
            //background-color: $dark;
          }

          a {
            display: block;
            padding: 0 30px;

            font-size: 13px;
            font-weight: 500;
            line-height: 1.2;
            color: $main-text;
            text-align: left;
            text-transform: uppercase;
            transition: all 200ms ease-in;

            &:hover {
              color: $blue;
              //font-weight: bold;
            }
          }
          &.current-menu-item {
            & > a {
              color: $blue;
              font-weight: bold;
            }
          }
        }

      }

      &:hover > .sub-menu {
        display: block;
        //transform: translate(-20%, 0);
      }
    }
  }
}

