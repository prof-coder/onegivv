@import "../vars.styl";

a {
  text-decoration: none;
  &.link {
    color: $blue;
    text-decoration: underline;
    transition: all 150ms ease-in;
    &:hover {
      opacity: 0.8;
    }
  }
}

/*--------------------------------------------------------------
# Typography Styles
--------------------------------------------------------------*/
h1, .h1 {
  position: relative;
  display: block;
  width: 100%;

  font-size: 48px;
  font-weight: bold;
}

h2, .h2 {
  font-family: $montserrat-font;
  font-size: 25px;
  font-weight: 300;
  line-height: 1.2;
  @media only screen and (min-width: 480px) {
    font-size: 36px;
  }
  @media only screen and (min-width: 768px) {
    font-size: 52px;
  }
}

h3, .h3 {
  font-size: 18px;
  font-weight: bold;
  line-height: 21px;
}

.t-group {
  max-width: 343px;
  h2 {
    display: inline-block;
    margin-bottom: 10px;
    vertical-align: baseline;
    font-weight: bold;
    font-size: 52px;
    line-height: 0.7;
    small {
      font-size: 21px;
    }
    span {
      font-size: 28px;
      &.t-medium {
        font-size: 38px;
      }
    }
  }
  h3 {
    font-weight: normal;
    line-height: inherit;
  }
}

p {
  margin-top: 0;
}

blockquote {
  position: relative;
  margin: 0;
  padding: 20px;
  font-size: 14px;
  line-height: 18px;
  text-align: center;
  &:before {
    content: '“';
    position: absolute;
    left: 0;
    top: 19px;
    display: block;
    font-size: 54px;
    text-align: center;
    color: $blue;
  }
  &:after {
    content: '”';
    position: absolute;
    right: 0;
    bottom: -19px;
    display: block;
    font-size: 54px;
    text-align: center;
    color: $blue;
  }
}

address {
  font-style: normal;
}

/*--------------------------------------------------------------
# Alignments
--------------------------------------------------------------*/
.alignleft {
  display: inline;
  float: left;
  margin-right: 2.5em;
  margin-bottom: 2.5em;
}

.alignright {
  display: inline;
  float: right;
  margin-left: 2.5em;
  margin-bottom: 2.5em;
}

.aligncenter {
  clear: both;
  display: block;
  margin-left: auto;
  margin-right: auto;
  margin-top: 1.5em;
  margin-bottom: 1.5em;
}