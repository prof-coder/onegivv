.slick-dots {
  min-width: 100%;
  padding: 0;
  margin-top: 0;
  list-style-type: none;
  text-align: center;

  li {
    position: relative;
    display: inline-block;
    vertical-align: middle;

    width: 10px;
    height: 10px;
    margin-left: 7.5px;
    margin-right: 7.5px;
    padding: 5px 0;
    cursor: pointer;

    background: #20AFFF;
    opacity: 0.3;
    border-radius: 10px;

    &.slick-active {
      opacity: 1;

      &:before {
        background-color: #007BFF;
      }
    }

    button {
      display: none;
    }
  }
}