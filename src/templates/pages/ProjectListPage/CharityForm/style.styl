.charitySection
    display flex
    flex-direction column
    padding: 0 !important
    position: relative
    border-radius: 0
    box-shadow: 0 0 20px rgba(0, 0, 0, .15)
    .headerPicture
        position relative
        height: 200px
        input
            display none
        .no-picture
            height: 200px
            position: relative
            > img
                width: 100%
                height: 200px
                object-fit: cover
            .main-picture
                position: absolute
                top: 0
                width: 100%
                height: 200px
                m-flex()
                .content
                    m-flex()
                    flex-direction column
                    img
                        width 14px
                        height 12px
                        margin-bottom 5px
                    span
                        color: #666666;
                        m-font(Roboto, normal, bold, normal, 10px)
                        letter-spacing 1px
        .real-picture
            height 200px
            position relative
            img
                //border-top-left-radius: 8px
                //border-top-right-radius: 8px
                width 100%
                height 100%
                object-fit cover
        .gradient-overlay
            //border-top-left-radius: 8px
            //border-top-right-radius: 8px
            cursor pointer
            opacity 0.4
            position absolute
            left 0
            top 0
            width 100%
            height  100%
            background: linear-gradient(180deg, #CCCCCC 0%, #666666 100%)
    .userAvatar
        position: absolute
        bottom: -20px
        right: 60px        
        .UserAvatar
            width: 47px !important
            height: 47px !important
            .avatar-wrapper
                min-width: 47px !important
                min-height: 47px !important
                width: 47px !important
                height: 47px !important
                border: 2px solid $blue-color
            .typeWrapper
                display: none
    .profileInfo
        padding: 5px 20px 0 20px
        .flex-wrapper
            m-flex(flex-start)
            .label
                cursor: pointer
                padding: 0
                .name
                    m-font(Roboto, normal, 500, normal, 14px)
                    color #333
        .chairty-desc
            p
                m-font(Roboto, normal, normal, 17px, 14px)
                text-align left
                word-break break-word
                white-space pre-wrap
                min-height 50px
                margin: 0
        a
            align-self center
        .check-mark-section
            margin-top: -15px
            img
                &.check-mark
                    width: 18px
                    height: 18px
    .btn-wrapper
        text-align: center
        padding-bottom: 20px
    .btn-support
        position relative
        outline none
        cursor pointer
        overflow hidden
        font-weight 600
        border none;
        background-color $blue-color
        font-weight 400
        line-height: normal
        color #FFF
        padding 10px 15px
        &[disabled]
            opacity 0.4
            background gray
            pointer-events: none;

@media all and (max-width: 575.98px)
    .charitySection
        .btn-wrapper
            text-align: center
            padding-bottom: 20px
        .headerPicture
            height: 200px
            .no-picture
                height: 200px
                > img
                    height: 200px
            .main-picture
                height: 200px