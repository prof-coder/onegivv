.categoryListSection
    position: relative
    .categoryList
        display: flex
        flex-wrap: wrap
        justify-content: space-between
        .eachCategory
            border-radius: 0
            width: 160px
            height: 80px
            margin: 12px auto
            position: relative
            > img
                border-radius: 0
                width: 100%
                height: 100%
                object-fit: cover
            > p
                position: absolute
                font-size: 13px
                font-weight: bold
                line-height: 15px
                height: 28px
                left: 50%
                top: 50%
                transform: translate(-50%, -50%)
                color: #ffffff
                margin: 0
                text-align: center
                text-overflow: ellipsis
                overflow: hidden
    .toggleMenu
        background: #FFF
        box-shadow: 0px 4px 4px rgba(0, 0, 0, 0.25);
        position: absolute
        overflow: hidden;
        border-radius: 0;
        width: 160px
        height: 0
        left: -75px
        top: 30px
        right: 0
        padding: 0px
        z-index: 80
        max-height: 300px
        overflow: scroll
        &:before
            content: ' '
            position: absolute
            top: -8px
            left: 120px
            border-bottom: 15px solid #fff
            border-left: 10px solid transparent
            border-right: 10px solid transparent
            width: 0
            height: 0
        .header
            box-shadow: none
            > img
                width: 10px
                heigh: auto
        .submenu
            color: #666666
            cursor: pointer
            padding: 5px 2px 5px 0px
            m-flex(flex-start)
            &:hover
                background: #eee
            ._label
                margin-left: 8px
                m-font(Roboto, normal, normal, normal, 12px)
                color: #1AAAFF
                text-overflow: ellipsis
                overflow: hidden
                white-space nowrap
        &.open
            padding 0 8px 5px 3px
            overflow: scroll
            height: 300px
