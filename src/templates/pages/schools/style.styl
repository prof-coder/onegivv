.SchoolPage
	position relative
	padding 0px 16px 20px 16px
	box-sizing border-box
	background #fff
	box-shadow 0px 1px 5px rgba(0,0,0,0.1)
	border-radius 8px
	width 100%
	max-width $max-card-width
	margin 16px auto 0
	.schoolInformation
		display flex
		padding-top 10px
		.schoolImage
			width 80px
			height 80px
			top 15px
			position relative
			background linear-gradient(90deg, $first-color 0%, $second-color 100%)
			border-radius 100%
			&:after
				content ''
				display block
				position absolute
				top 2px
				left 2px
				border-radius 100%
				background white
				width calc(100% - 4px)
				height calc(100% - 4px)
		.textBlock
			margin-left 16px
			.schoolTitle
				font-weight 500
				margin 10px 0
				line-height 24px
				font-size 14px
				text-transform capitalize
				color #333333
			.schoolAddress,
			.schoolPhone
				font-family 'Open Sans'
				line-height 18px
				margin 0
				font-size 12px
				text-transform capitalize
				color #666666
	.SchollListOfPeople
		padding 0
		margin 0
		list-style none
		.rowForSchool
			display flex
			align-items center
			justify-content space-between
			margin 20px 0
			.userWrapperAva
				display flex
				text-align center
				justify-content center
				text-decoration none
			.volonteerHours
				text-align center
			span.nameUser
				font-weight 500
				font-size 14px
				text-transform capitalize
				color #333333
				padding 22px 0px 0px 16px
			.number
				font-weight 500
				font-size 12px
				margin-bottom 9px
				text-align center
				color #666666
			.textTitle
				font-size 12px
				text-align center
				color #999999
	h1
		margin 0