.contact-chat
    max-width: 250px
    background: #FFFFFF;
    box-shadow: 0px 1px 5px rgba(0, 0, 0, 0.1);
    border-radius: 8px 0px 0px 8px;
    height: calc(100vh - 120px)
    display: flex;
    flex-direction: column;
    overflow: hidden
    .text-right
        text-align: right
    .contact-chat-header
        padding: 10px 15px
        background:  linear-gradient(90deg, $first-color 0%, $second-color 100%) left  bottom no-repeat; 
        background-size:100% 1px ;
        display flex
        justify-content: space-between
        align-items: center
        ._title
            color: #999999;
            font-size: 16px
            line-height: 23px
    .search-body
        overflow: auto;
        position:relative
        height: 100%;
        .search-wrapper
            padding: 20px
            position: sticky
            background: white
            top: 0px
            z-index: 5
            .search-bar            
                border: 1px solid #DDDDDD;
                box-sizing: border-box;
                border-radius: 32px;
                padding: 3px 16px
                display: flex
                align-items: center                
                position relative
                ._icon
                    color: #CCCCCC;
                    font-size: 12px
                ._text
                    border: none
                    background: none
                    outline: none
                    margin-left: 10px
                    font-size: 14px
                    font-family: Open Sans;
                    font-style: normal;
                    font-weight: normal;
                    line-height: normal;
                    &::placeholder
                        color: #999999;
                button
                    position absolute
                    right 0px
                    top 0px
        .chat-user-body
            position: relative
@media all and (max-width: 768px)
    .contact-chat
        display: none
        width: 100%
        max-width: 100%
        &.active
            display: block
        .contact-chat-header
            ._title
                font-size: 12px
        .search-body
            .search-bar
                ._text
                    font-size: 12px