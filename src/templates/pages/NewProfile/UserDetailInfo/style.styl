.userDetailInfoCard
    &.card-mail-class
        border-radius: 0
        box-shadow: 0px 0px 20px rgba(0, 0, 0, 0.15)
    .userInfoBody
        padding: 40px 30px 0 30px
        .ratingBody
            width: 100%
            display: flex
            .caption
                width: 180px
                p
                    margin: 0
                    font-family: Montserrat,sans-serif
                    &.title
                        color: #000000
                        font-size: 25px
                        line-height: 31px
                        font-weight: bold
                .desc
                    display: flex
                    padding: 5px 0
                    img
                        vertical-align: middle
                        margin-right: 10px
                    p
                        color: #4F4F4F
                        font-size: 14px
                        line-height: 17px
                        font-weight: normal
            .star
                width: 100%
                margin-top: -23px
                .dv-star-rating
                    label
                        font-size: 32px
        .contactInfoBody
            padding: 20px 0
            p
                color: #000000
                font-size: 15px
                line-height: 21px
                &.title
                    font-weight: bold
        .review-title
            m-flex(space-between)
            .title
                color: #000000
                font-weight: bold
                font-size: 25px
                line-height: 31px
            img
                cursor: pointer
            .btn-new
                width 20px
                height 18px
                background-color #c4c4c4
                visibility hidden
                &.active
                    visibility visible
        .review-list
            padding: 15px 0
        .star-rating
            m-flex(flex-start)
            .dv-star-rating
                .dv-star-rating-star
                    i
                        font-size 30px        
            .review-count
                margin-left 20px
                color: #666
                m-font(Roboto, normal, 500, normal, 14px)
        .review-tab
            m-flex()
            .dv-star-rating
                .dv-star-rating-star
                    padding 0px 10px
        .new-review
            border-radius: 0
            .title
                color: #000000
                font-weight: bold
                font-size: 25px
                line-height: 31px
            ._review
                m-font(Open Sans, normal, normal, normal, 14px )
                color #666
                background #FFFFFF
                border 1px solid #DDDDDD
                box-sizing border-box
                border-radius 0
                outline none
                padding 10px
                width 100%
                resize none
                &:placeholder
                    color #CCCCCC
            .bot-border
                border-bottom 1px solid #F3ECEC
            .submit-btn
                m-flex(flex-end)
