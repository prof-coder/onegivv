.recurring-card
    display flex
    padding 20px 0px
    align-items center
    justify-content space-between
    ._info
        display flex
        flex-direction column
        flex-basis 70%
        ._name
            m-font(Roboto, normal, 500, 15px, 14px)
            color #333
            margin-bottom: 3px
        ._frequency
            m-font(Roboto, normal, normal, 18px, 13px)
            color #3E4A59
            opacity 0.7
    ._amount
        m-font(Roboto, normal, 500, 28px, 14px)
        color $first-color
    .card-action
        position relative
        .action
            cursor: pointer
            color: #333
            padding: 10px 0px 10px 10px
        .action-menu
            margin-top: 10px
            background: white
            box-shadow: 0px 10px 20px rgba(0, 0, 0, 0.1)
            position: absolute
            transition: .3s
            overflow: hidden
            top: 5px
            right 0
            width: 100px
            height: 0
            border-radius: 0
            .submenu
                color: #666666
                cursor: pointer
                &.edit
                    padding: 5px 10px 3px 10px
                    img
                        width: 18px
                &.cancel
                    padding: 5px 10px
                    img
                        width: 18px
                &:hover
                    background: #eee
                ._label
                    margin-left: 8px
                    font-size: 13px
                    font-weight: normal
                    line-height: 20px
                    vertical-align: top
            &.open
                height: auto
                transition: .3s
                z-index: 999