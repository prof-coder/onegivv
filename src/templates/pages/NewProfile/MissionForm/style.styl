.missionFormSection
    .card-mail-class
        border-radius: 0
        box-shadow: 0px 0px 20px rgba(0, 0, 0, 0.15)
    .missionForm
        margin-top: 0
        .overview
            p
                margin: 0
                font-style: normal
                line-height: normal
                color: #000000
                font-family: Roboto
                font-size: 15px
                font-weight: normal
                &.title
                    font-size: 25px
                    line-height: 30px
                    font-weight: bold
                    letter-spacing: 0.3px
                &.description
                    padding: 15px 0
                    line-height: 21px
                    text-align: left

@media only screen and (max-width: 1050px)
    .missionFormSection
        .missionForm
            margin-top: 16px