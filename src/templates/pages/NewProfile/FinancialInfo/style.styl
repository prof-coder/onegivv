.financialInfoCard
    &.card-mail-class
        border-radius: 0
        box-shadow: 0px 0px 20px rgba(0, 0, 0, 0.15)
    .financialInfoBody
        padding: 47px 31px
        .titleBody
            display: flex
            justify-content: space-between
            padding: 0 30px 0 0
            p
                color: #000000
                font-weight: bold
                &.caption
                    font-size: 25px
                    line-height: 31px
                &.value
                    font-size: 17px
                    line-height: 21px
                    span
                        margin-left: 10px
                        color: #20AFFF
                        font-size: 25px
                        line-height: 30px
        .subInfo
            margin: 5px 0
            padding: 8px 30px
            &.managementSpend
                margin-bottom: 25px
            .dollarSign
                font-size: 22px
                color: #1aaaff
                font-weight: bold
            .annualBudget
                margin-left: 5px
                border: none
                border-bottom: 1px solid #1aaaff
                outline: none
                max-width: 60px
                text-align: center
                padding-left: 10px
                box-sizing: border-box
                font-family: Roboto
                font-style: normal
                font-weight: bold
                line-height: normal
                font-size: 22px
                color: #1aaaff
            .annualBudgetCaption
                margin: 5px
                color: #000000
                font-family: Roboto
                font-size: 14px
                font-weight: normal
            .summary
                display: flex
                justify-content: space-between
                p
                    font-size: 16px
                    font-weight: 500
                    margin: 0
                    &.summaryCaption
                        color: #000000
                    &.percent
                        color: #1AAAFF
            .flexWrapper
                margin-top: 10px
                margin-right: 0
                width: 100%
                display: flex
                justify-content: space-between
                align-items: center
                .progressBar
                    display: flex
                    flex-wrap: wrap
                    flex-basis: 100%
                    width: 100%
                    .progressWrapper
                        width: 100%
                        flex-basis: 100%
                        .progress
                            height: 10px
                            background: #ddd
                            position: relative
                            .progressContain
                                height: 10px
                                position: absolute
                                left: 0
                                top: 0
                                background: -webkit-gradient(linear, left top, right top, from(#1aaaff), to(#5eedfd))
                                background: -webkit-linear-gradient(left, #1aaaff 0%, #5eedfd 100%)
                                background: linear-gradient(90deg, #1aaaff 0%, #5eedfd 100%)
        .programSection
            padding: 8px 30px
            p
                margin: 0
                font-style: normal
                line-height: normal
                color: #000000
                font-family: Roboto
                font-size: 14px
                &.title
                    font-weight: 500
                    letter-spacing: 0.3px
            .subInfo
                margin: 8px 0
                padding: 0
                p
                    margin: 0
                    font-style: normal
                    line-height: 18px
                    color: #000000
                    font-family: Roboto
                    font-size: 14px
                    font-weight: 500
                    text-align: left
                    &.subTitle
                        color: #1aaaff
                    &.description
                        color: #000000
                        font-weight: normal

@media all and (max-width: 768px)
    .financialInfoCard
        .financialInfoBody
            padding: 25px 25px
            .titleBody
                display: block
            .subInfo
                padding: 8px 0
            .programSection
                padding: 8px 0