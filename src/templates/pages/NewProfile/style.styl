.newProfileWrapper
    margin: auto
    padding: 0 30px
    .profileBody
        .btn-go-back
            cursor: pointer
            margin: 7px 0 7px 7px
        .myProfilePage
            margin-top: 0
            border-radius: 0
            box-shadow: 0 0 20px rgba(0, 0, 0, .15)
            .profileInfo
                position: relative
                height: 500px
                .headerPicture
                    height: 500px
                    input
                        display: none
                    .gradientOverlay
                        cursor: pointer
                        opacity: .3
                        position: absolute
                        left: 0
                        top: 0
                        width: 100%
                        height: 500px
                        background: -webkit-linear-gradient(top,#ccc,#666)
                        background: linear-gradient(180deg,#ccc,#666)
                    .noPicture
                        width: 100%
                        height: 500px
                        > img
                            width: 100%
                            height: 500px
                            object-fit: cover
                        .mainPicture
                            width: 100%
                            .content
                                width: 100%
                    .realPicture
                        img
                            width: 100%
                            height: 500px
                            object-fit: cover
                        .gradientOverlay
                            width: 100%
                            height: 500px
                        > div
                            .actionPicture
                                position: absolute
                                top: 18px
                                right: 23px
                                color: #FFF
                                cursor: pointer
                            .editMenu
                                background: #FFF
                                box-shadow: 0px 4px 4px rgba(0, 0, 0, 0.25);
                                position: absolute
                                transition: .3s
                                overflow: hidden;
                                border-radius: 0
                                height: 0
                                top: 40px
                                right: 5px
                                padding: 0px
                                z-index: 80
                                &:before
                                    content: ' ';
                                    position: absolute;
                                    top: -8px;
                                    right: 15px;
                                    border-bottom: 15px solid #fff;
                                    border-left: 10px solid transparent;
                                    border-right: 10px solid transparent;
                                    width: 0;
                                    height: 0;
                                .submenu
                                    color: #666666;
                                    cursor: pointer
                                    padding: 5px 15px 5px 10px
                                    m-flex(flex-start)
                                    &:hover
                                        background: #eee
                                    img
                                        width: 13px
                                        height: 13px
                                    ._label
                                        margin-left: 8px
                                        m-font(Roboto, normal, normal, normal, 14px)
                                .header
                                    padding: 0px 10px
                                    font-size: 10px
                                    svg
                                        cursor: pointer
                                &.open
                                    padding: 5px 0px
                                    overflow: visible
                                    height: auto
                                    transition: .3s
                .userInfo
