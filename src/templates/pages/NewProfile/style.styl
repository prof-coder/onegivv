    .tabSection
        .tabBody
            padding: 50px 300px
            ul
                &:after
                    content: ' '
                    display: table
                    clear: both
                &.tabs
                    position: relative
                    margin: 0
                    padding: 0
                    list-style: none
                li
                    text-align: center
                    display: inline-block
                    &.tab
                        padding: 10px 20px
                        cursor: pointer
                        font-size: 25px
                        font-weight: bold
                        line-height: 30px
                        color: #828282
                        &.active
                            color: #000000
                        &:hover
                            color: #000000
                    &.tabs
                        &__tab
                            float: left
                            width: 33.333%
                            text-align: center
                            &:first-child.active ~ .tabs__presentation-slider
                                left: 0
                            &:nth-child(2).active ~ .tabs__presentation-slider
                                left: 33.333%
                            &:nth-child(3).active ~ .tabs__presentation-slider
                                left: calc(33.333% * 2)
                            &.onlyOne
                                width: 100%
                        &__presentation-slider
                            position: absolute
                            bottom: 0
                            left: 0
                            width: 33.333%
                            height: 5px
                            background-color: #20AFFF
                            transition: left .25s
