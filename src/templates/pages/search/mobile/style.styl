@import './SearchLanding/style.styl'

.modal-search
    &.mobile
        padding: 20px 0px
        position: relative
        margin: 0 10px
        width: auto
        .close-wrapper
            .close-btn
                height 17px
                width 17px
                position absolute
                right 10px
                cursor pointer
                top 10px
                background-size cover
                background-image url("/images/ui-icon/close_modal.svg")
        .search-wrapper
            position: relative
            overflow: visible
            -webkit-overflow-scrolling: auto !important
            z-index: 1 !important
            .searchBox
                position: absolute
                top: 20px
                width: 100%
        .search-result
            margin-top: 30px
            z-index: -1 !important
            background-color: #ffffff
            box-shadow 0px 1px 5px rgba(0, 0, 0, 0.15)
            border-radius 8px
            .all-result
                padding-top 35px