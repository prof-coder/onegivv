.ConnectsPage
	position relative
	border-radius 8px
	max-width $max-card-width
	margin 16px auto 0
	.btn-go-back
		margin: 0 0 8px 5px
		cursor: pointer
	.hint-invite-friends
		margin-bottom: 10px
		border-radius: 0
	.topSection
		padding 0px 35px 25px 24px
		box-sizing border-box
		background #FFFFFF
		box-shadow 0px 1px 3px rgba(0, 0, 0, 0), 0px 1px 3px rgba(0, 0, 0, 0), 0px 5px 15px rgba(0, 0, 0, 0.1), 0px 1px 3px rgba(0, 0, 0, 0)
		width 100%
		position relative
		border-radius 8px 8px 0 0
		z-index 2
		.wrapper
			display flex
			flex-wrap wrap
			justify-content space-between
			align-items flex-end
			padding-top 30px
			.userHolder
				display flex
				justify-content space-between
				align-items center
				text-decoration none
				margin-bottom 10px
				.userName
					margin-left 16px
					font-weight 500
					font-size 14px
					text-transform capitalize
					color #333333
			.navTabHolder
				display flex
				.tabClicker
					font-weight 500
					font-size 16px
					cursor pointer
					text-decoration none
					color #666666
					&:before
						content ''
						display block
						width 134px
						position absolute
						bottom 0
						margin-left -24px
						height 0px
						transition .5s
						background linear-gradient(90deg, $first-color 0%, $second-color 100%)
					&:first-of-type
						margin-right 64px
					&.active
						color $first-color
						&:before
							height 2px
							transition .5s
	.userSection
		position relative
		z-index 1
		min-height 200px
		border-radius 0 0 8px 8px
		background #FFFFFF
		box-shadow 0px 1px 3px rgba(0, 0, 0, 0.2)
		ul.listOfUsers
			display flex
			flex-wrap wrap
			margin 0
			padding 0
			list-style none
			li.singleUser
				padding 25px
				box-sizing border-box
				flex-basis 100%
				display flex
				justify-content space-between
				align-items center
				.userDataWrapper
					display flex
					cursor pointer
					text-decoration none
					.avatarWrapper
						flex-basis 60px
					.userTextWrapper
						margin 0 0 0 16px
						.userName
							font-weight 500
							font-size 16px
							text-transform capitalize
							color #333333
							margin 0 0 8px 0
						.userFollow
							font-size 12px
							text-transform capitalize
							color #57D7A2
							margin 0
				.followUserButton
					margin 0 0 0 16px
					padding 11px 24px !important

@media all and (max-width: 768px)
	.ConnectsPage
		.btn-go-back
			margin-left: 15px
		.hint-invite-friends
			margin-left: 15px
		.userSection
			ul.listOfUsers
				li.singleUser
					padding 15px
					.userDataWrapper
						.userTextWrapper
							margin-left 8px
							.userName
								font-size 14px
					.followUserButton
						margin-left 8px
						padding 8px !important
						min-width 80px