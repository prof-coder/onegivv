.invite-ui
    .modal
        .modalContent
            max-width: 340px !important
            background-color: #EAEDF1
            padding: 0 !important
            min-height: 570px
            .modalHeader
                background-color: #2A3B45
                h2
                    padding: 10px 0
                    color: white
                    font-size: 24px
                    font-weight: normal
                .closeBtn
                    background-image: url(/images/ui-icon/close_white_24x24.png)
                    width: 22px
                    height: 22px
                    margin-top: 3px
                    cursor: pointer
            .panel-body
                ul
                        list-style: none
                        margin-block-start: 0
                        margin-block-end: 0
                        margin-inline-start: 0
                        margin-inline-end: 0
                        padding-inline-start: 0
                    li
                        height: 45px
                        padding: 8px 10px
                        &:nth-child(odd)
                            background-color: #F6F6F6
                        &:nth-child(even)
                            background-color: #FFFFFF
                        .each-channel
                            cursor: pointer
                            display: flex
                            img
                                width: 45px
                                height: 45px
                            p
                                font-weight: bold
                                font-size: 18px
                                margin: 12px
                            