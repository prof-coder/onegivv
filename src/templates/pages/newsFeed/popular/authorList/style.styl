.popular-author
    width: 250px
    margin: auto
    position: fixed
    .text-right
        text-align: right
    ._title
        color: #999999;
        font-size: 16px
        line-height: 23px
        padding: 10px 15px
        background:  linear-gradient(90deg, $first-color 0%, $second-color 100%) left  bottom no-repeat; 
        background-size:100% 1px ;
    .search-body
        padding: 20px
        .search-bar
            border: 1px solid #DDDDDD;
            box-sizing: border-box;
            border-radius: 32px;
            padding: 6px 16px
            margin-bottom: 15px
            ._icon
                color: #CCCCCC;
                font-size: 12px
            ._text
                width: 80%
                border: none
                background: none
                outline: none
                margin-left: 17px
                font-size: 14px
                font-family: Open Sans;
                font-style: normal;
                font-weight: normal;
                line-height: normal;
                &::placeholder
                    color: #999999;