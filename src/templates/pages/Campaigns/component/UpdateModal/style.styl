.updateModal
    width: 600px !important
    .modal
        .modalContent
            max-width: 600px !important
            .modalHeader
                h2
                    padding: 0
                    font-weight: normal
                .closeBtn
                    top: 20px
                    right: 20px
            .modalBody
                text-align: center
                .subTitle
                    width: 220px
                    font-weight: normal
                    margin: auto
                    font-size: 16px
                    color: #333333
                    padding: 20px 10px 10px 10px
                .formGroup
                    padding: 5px 5px 10px 5px
                    text-align: center
                    .caption
                        text-align: left
                        font-weight: normal
                        font-size: 14px
                        color: #666666
                        margin: 5px
                    .formContent
                        padding: 5px
                        text-align: left
                        .longDesc
                            border-radius: 10px
                            border-color: #DDDDDD
                            width: 100%
                            padding: 10px
                            box-sizing: border-box
                        .inputText
                            text-align: center
                            width: 80px
                            padding: 5px 0 1px 5px
                            height: 25px
                            font-size: 18px
                            outline: none
                            border: 1px solid #DDDDDD
                            border-radius: 50px
                    .btnComplete
                        width: 200px
                        margin: 10px auto

