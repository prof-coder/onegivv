.ProjectMiniCard
    flex-basis 25%
    padding 0 10px
    margin-bottom 30px
    box-sizing border-box
    &.active
        .CardBody
            border 2px solid $first-color
            box-shadow 0px 20px 20px rgba(254, 113, 51, 0.07)
    .CardBody
        position relative
        background #FFFFFF
        border-radius 0
        box-shadow 0px 20px 20px rgba(0, 0, 0, 0.07)
        overflow hidden
        .CardHeader
            position absolute
            padding 10px
            display flex
            width 100%
            box-sizing border-box
            .bullets
                margin-left auto
        .CoverImg
            cursor pointer
        .CardContent
            padding 10px
            min-height: 154px
            h4
                font-size: 18px
                font-weight: 500
                font-style: normal
                line-height: 25px
                height: 30px
                &.completed-title
                    color: #1AAAFF
                    margin: 0
                &.canceled-title
                    color: #FF3627;
            .description
                font-weight normal
                line-height 20px
                font-size 16px
                color #333333
                overflow hidden
                text-align left
                width: 100%
                word-break: break-word
                white-space: pre-wrap
                height: 45px
                &.bottom
                    height: 30px
            .actionButtons
                display: flex
                a
                    text-decoration none
                    display flex
                .button-main-class
                    min-width 78px
                .btn-view
                    margin-left auto
            .summary
                display: flex
                justify-content: space-between
                min-height: 45px
                p
                    font-family: Roboto
                    font-style: normaldate, location, type
                    font-weight: normal
                    font-size: 13px
                    line-height: 15px
                    margin: 5px 0
                    color: #666666
                    &.right
                        text-align: right
            .flex-wrapper
                padding: 5px 0 12px 0
        .title
            font-weight bold
            line-height 25px
            font-size 21px
            letter-spacing -0.5px
            color #1F2126
            height 35px
            overflow hidden
            margin 0
            cursor pointer
    .preview
        width 100%
        height 130px
        object-fit cover

@media all and (max-width: 768px)
    .ProjectMiniCard
        flex-basis 100%