.CampaignsDetailModal
    .modalContent
        max-height 90%
        overflow auto
        .RequestsHeader
            display flex
            flex-wrap wrap
            margin 10px 0
            .tab
                flex 1
                text-align center
                text-decoration none
                color #666666
                &.active
                    color $first-color
        .RequestsBody
            background #FFFFFF
            box-shadow 0px 10px 14px rgba(0, 0, 0, 0.1)
            border-radius 8px
            padding-bottom 20px
        .RequestsTable
            width 100%
            margin 0
            padding 0
            border-collapse collapse
            border-spacing 0
            thead
                box-shadow 0px 7px 20px rgba(0, 0, 0, 0.08)
                border-radius 8px
            tbody
                tr:not(:first-child):not(:last-child)
                    border-bottom 1px solid #F6EFEF
            th,td
                padding 15px
                text-align left
                color #666666
                font-size 14px
                font-weight 400
                &:first-child
                    padding-left 40px
            td
                .FilterWrapper
                    position relative
                    .InputFilter
                        width 100%
                        border none
                        border-bottom 1px solid #D6D6D6
                        color rgba(51, 51, 51, 1)
                        outline none
                        padding 10px 0 10px 30px;
                        box-sizing border-box
                        font-size 12px
                        &::placeholder
                            color rgba(51, 51, 51, 0.2)
                            font-style italic
                    .search-icon
                        position absolute
                        top 5px
                        left 5px
            .accept
                font-weight 500
                font-size 14px
                color $first-color
            .reject
                font-weight 500
                font-size 14px
                color #666666
            .fullname
                font-weight bold
            .clock-icon
                margin-left 20px
                margin-right 5px
            .round-icon
                width 6px
                height 6px
                display inline-block
                border-radius 3px
                background-color $first-color
                vertical-align middle
                margin-right 5px
            .UserAvatar
                display inline-block
                vertical-align middle
                margin-right 10px