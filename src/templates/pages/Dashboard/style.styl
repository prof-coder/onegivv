.WithdrawModal
	.withdrawalCard
		text-align center
		.outer
			display flex
			flex-wrap wrap
			width 100%
			.leftPanel
				flex-basis 50%
				width 50%
				text-align center
				p
					color #1aaaff
					font-size 20px
					margin 0
				img
					margin 15px 0 9px 0
				.available-donation-money
					margin-bottom 0
			.rightPanel
				flex-basis 50%
				width 50%
				.available-donation-money
					margin-top 0
				.withdrawalAmount
					text-align right
					width 80px
					padding 5px 0 1px 5px
					height 25px
					font-size 18px
					outline none
					border 1px solid gray
					border-radius 50px
		button
			margin 0 auto
			background #ffffff !important
			border 1px solid #1aaaff
			padding 5px 40px !important
			span
				font-size 15px !important
				color #1aaaff !important
.ConfirmationModal
	.button-group
		display flex
		justify-content flex-end
		.button-main-class
			margin 0 5px
.VerificationModal
	.modalContent
		min-height 400px
		width 500px
		box-sizing border-box
		.btn-back
			cursor pointer
	.wizard-bar
		display flex
		justify-content center
		.steps
			display flex
			flex-wrap wrap
			.wizard-step
				position relative
				width 36px
				height 36px
				.step-icon
					width 24px
					height 24px
					background #f2f2f2
					border 2px solid #CCCCCC
					border-radius 100%
					cursor pointer
					position absolute
				&:not(:last-child)
					flex-basis 140px
					width 140px
					&:before
						content: ''
						position: absolute;
						border: 2px solid #ccc;
						top: 13px;
						width: 100%;
						left: 18px;				
				&.active
					.step-icon
						width 36px
						height 36px
						border none
						background url(/images/ui-icon/step-active.svg)
						background-size cover
					&:before
						border-color #1AAAFF
	.wizard-content
		margin-top 40px
		textarea.control
			width 100%
			background #FFFFFF
			border 1px solid #BECAD6
			box-sizing border-box
			border-radius 16px
			outline none
			min-height 200px !important
			padding 10px
			resize none
			&::-webkit-input-placeholder
				color #dedede
			&::-moz-placeholder
				color #dedede
		.label
			text-align center
			color #666
			padding 0px 45px
		.control-label
			m-font(Roboto, normal, normal, normal, 12px)
			margin-bottom 10px
			padding-left 15px
			color #666
		.row
			padding 0px 20px
			m-flex(space-between)
			.col
				flex-basis 49%
			.col-full
				flex-basis 100%
			.col-full,.col
				.control-value
					width 100%
					padding 10px
					outline none
					border-radius 16px
					border 1px solid #DDDDDD
					box-sizing border-box
					&::-webkit-input-placeholder
						color #dedede
					&::-moz-placeholder
						color #dedede

		.plaid-button
			border none !important
			align-self center
			.connect-bank
				background #FFFFFF
				border 1px solid #DDDDDD
				box-sizing border-box
				border-radius 16px
				padding 18px 65px
				m-flex(justify-content, center)
				flex-direction column
				.title
					cursor pointer
					m-font(Roboto, normal, 500, normal, 14px)
					color $first-color
		.result-desc
			max-width 260px
			margin auto
			font-size 1rem
	.wizard-footer
		m-flex(center) 
		text-align right
		margin-top 20px
		.button-main-class
			font-weight normal
			box-shadow 0 4px 4px #c1c1c1

.stripe-wrapper
	margin 30px 0
	min-height 200px
	.elements
		width 325px
		height 190px
		padding 20px
		margin auto
		border-radius 10px
		background linear-gradient(175.17deg, $first-color 6.31%, $second-color 123.34%)
		display flex
		flex-wrap wrap
		box-shadow 20px 30px 40px rgba(236, 100, 51, 0.5)
		box-sizing border-box
		&.mastercard
			background linear-gradient(175.17deg, $first-color 6.31%, $second-color 123.34%)
			box-shadow 20px 30px 40px rgba(236, 100, 51, 0.5)
		.form-group
			text-align left
			.control
				background transparent
				border none
				outline none
				font-size 13px
				line-height 16px
				color #fff
				&::placeholder
					color rgba(255, 255, 255, 0.8)
		.label
			color #fff
			font-weight 100
			line-height 20px
			padding 0
		.shiny
			flex auto
			.shiny-content
				background linear-gradient(90deg, #C3C3C3 0%, #FFFFFF 100%)
				border-radius 5px
				width 50px
				height 40px
		.number
			flex-basis 100%
			align-self center
		.name
			flex-basis 75%
			align-self flex-end
		.expiry
			flex-basis 25%
			align-self flex-end
		.cvc
			flex-basis 50%
			align-self flex-end
			display none
		.zipcode
			flex-basis 50%
			align-self flex-end
			display none

.dropzone
	width 300px
	height 250px
	margin auto
	border 3px dashed #DBDBDB
	border-radius 6px
	background #E8E8E8
	padding 20px 40px
	box-sizing border-box
	outline none
	p
		line-height 18px
		font-size 15px
		text-align center
		color #9B9B9B
	.file-preview
		width 120px
		margin auto
		border-radius 5px
		background #fff
		.filename
			text-align center
			padding 26px 0
		.action-bar
			padding 3px
			border-top 1px solid #d8d8d8
			text-align right
			.remove
				cursor pointer
	.content-divider
		position: relative;
		margin 10px 0
		z-index: 1;
		span
			line-height: 14px;
			font-size: 12px;
			text-align: center;
			color: #CCCCCC;
			background-color: #E8E8E8;
			display: inline-block;
			padding 0 10px
			&:before
				content: "";
				position: absolute;
				top: 50%;
				left: 0;
				height: 1px;
				background-color: #D9D9D9;
				width: 100%;
				z-index: -1;
	.btn-files
		position relative
		background: #EC6433;
		box-shadow: 0px 10px 20px rgba(236, 100, 51, 0.5);
		border-radius: 19px;
		color #FFF
		font-size 13px
		border: none;
		padding: 10px 50px;
		outline none
		img
			position absolute
			top 10px
			right 10px

.DashboardPage
	padding: 0px 20px 0px 90px;
	&.unapproved
		label,a,p
			color #666 
	a
		text-decoration none
		color #333
	p
		margin 0
		font-weight normal
	.small
		font-weight 300
		font-size 12px
		line-height 20px
		color #969696
	.label
		padding 0
	.count
		line-height 50px
		font-size 20px
		font-weight bold
		color #4A4A4A
	.pie-chart
		position relative
		width 90px
		height 90px
		align-self center
		&:before
			content ""
			position absolute
			width calc(100% - 7px)
			height calc(100% - 7px)
			top 4px
			left 4px
			display block
			border-radius 100%
			border 7px solid #E8E8E8
			box-sizing border-box
		&.small
			width 60px
			height 60px
			&:before
				top 2px
				left 2px
				border-width 4px
				width calc(100% - 4px)
				height calc(100% - 4px)
			.percent
				font-size 10px
				line-height 60px
		svg
			position relative
		.percent
			position absolute
			top 0
			right 0
			bottom 0
			left 0
			text-align center
			line-height 90px
	.row
		display flex
		flex-wrap wrap
		margin-left -10px
		margin-right -10px
		box-sizing border-box
		.col-12, .col-4, .col-6
			padding 0 10px
			box-sizing border-box
		.col-12
			flex-basis 100%
		.col-4
			flex-basis 33.33333333333334%
			width 33.33333333333334%
			> section
				box-shadow: 0px 0px 20px rgba(0, 0, 0, 0.15)
				border-radius: 0
		.col-6
			flex: 1 1
			justify-content: center
			display: block
		ul
			margin 0
			padding 0
			li
				position relative
				font-size 14px
				color #323C47
				list-style-type none
				padding-left 15px
				margin-bottom 8px
				&:before
					content '\2022'
					position absolute
					left 0
					color #999
					font-size 30px
					line-height 15px
				&.active
					&:before
						color $first-color
		.leftBlock
			.col-4
				padding-right: 35px
				> section
					box-shadow: 0px 0px 20px rgba(0, 0, 0, 0.15)
					border-radius: 0
			.card-mail-class
				min-height 180px
				.panel-header
					padding 5px 10px 20px 10px
					.options
						float right
						cursor pointer
				.panel-body
					margin auto
					&.fixed-width
						max-width 280px
			.verificationPanel
				.panel-body
					.text-center
						position relative						
					.verification-process
						margin-bottom 20px
						display flex
						justify-content space-between
						flex-wrap wrap
						ul
							margin-left auto
							padding 0
							flex-basis calc(100% - 100px)
							align-self center
			.receipt-list
				position absolute
				top 60px
				left 8px
				min-height unset
				z-index 2
				min-width 260px
				box-sizing border-box
				.title
					m-font(Roboto, normal, 500, normal, 17px)
				.content-body
					max-height 400px
					overflow-y auto
			.contractPanel
				position relative
				.p
					margin-bottom: 10px
				.receipt-list
					left 40px
					top 80px
					border-radius: 0
			.retentionPanel
				.pie-chart
					margin auto
				ul
					display inline-block
			.requestsPanel
				box-sizing border-box
				height 400px
				overflow auto
			.projects
				&.sample
					.projectWrapper
						.progressBar
							.progress-wrapper
								.progress-contain
									background rgba(102, 102, 102, 0.5)
				.projectWrapper
					m-flex(space-between)
					flex-wrap wrap
					margin 0 10px 10px
					.coverImg
						background #BCBBBB
						box-shadow 0px 2px 25px rgba(0, 0, 0, 0.2)
						border-radius 0
						width 55px
						height 55px
						margin-right 10px
						align-self flex-start
						img
							border-radius: 0
							height: 55px
					.progressBar
						flex auto
						width auto
					.projectDetail
						m-flex(space-between)
						.money
							text-align right
					.projectTitle
						margin-bottom 5px
						max-width: 225px
						> a
							> p
								margin: 0
								text-overflow: ellipsis
								white-space: nowrap
								overflow: hidden
			.requests
				.request
					m-flex(space-between,flex-start)
					flex-wrap wrap
					margin-bottom 10px
					.accept,.reject
						margin-right 10px
					.requestDetail
						flex auto
						width calc(100% - 150px)
						margin-right 10px
					.user
						margin-right 10px
					.button-group
						.button-main-class
							margin 0px auto 5px
					.needs
						li
							padding-left 8px
							margin-right 5px
							margin-bottom 0
							font-size 12px
							font-weight 300
							color #969696
							display inline-block
							&:before
								font-size 15px
		.notificationBlock
			flex-basis 25%
			box-sizing border-box
			margin-bottom 20px
			.card-mail-class
				height 100%
				box-sizing border-box
			.notificationPanel
				.panel-header
					.badge-wrapper
						position relative
						background #111
						box-shadow 1px 2px 17px rgba(0,0,0,0.07)
						border-radius 4px
						padding 8px 13px
						box-sizing border-box
						display inline-block
						img
							vertical-align bottom
						.badge
							background-color $first-color
							position absolute
							top -10px
							right -10px
							width 24px
							height 24px
							line-height 24px
							padding 0
							text-align center
							color #fff
							font-size 12px
							border-radius 100%
					.text-block
						display inline-block
						margin-left 30px
						h4
							font-weight 500
							font-size 20px
							color #323C47
							margin 0
						p
							font-style normal
							font-weight 500
							font-size 17px
							color #989898
							margin 0
				.panel-body
					margin-top 30px
					.notification
						.progressBar
							background rgba(254, 113, 51, 0.4);
							box-shadow 1px 2px 17px rgba(0, 0, 0, 0.05);
							border-radius 2px
							width 30%
							height 3px
						.time
							font-weight 500
							line-height 30px
							font-size 12px
							color #989898;
							display block
						.message
							margin 0
							line-height 19px
							font-size 14px
							letter-spacing -0.1px
							color #262D37
						.invite-block
							.accept-invite
								display inline
								margin-right 20px
								&:before
									content: ''
									width 19px
									height 17px
									line-height 17px
									margin-right 5px
									background-size cover
									background-image url(/images/ui-icon/tick.png)
									vertical-align middle
									display inline-block
								&.active
									&:before
										background-image url(/images/ui-icon/tick-active.png)
									span
										color $first-color
										opacity 0.74
								span
									font-weight bold
									font-size 10px
									color #262D37
									mix-blend-mode normal
									line-height 17px
									opacity 0.41
									display inline-block

							.view-event
								font-weight bold
								font-size 10px
								color $first-color
								mix-blend-mode normal
								opacity 0.74

@media all and (max-width: 1366px)
	.DashboardPage		
		.row
			.leftBlock
				.row
					.col-4
						padding-right: 20px
						> section
							box-shadow: 0px 0px 20px rgba(0, 0, 0, 0.15)
							border-radius: 0
			.notificationBlock
				padding-right 10px

@media all and (max-width: 768px)
	.DashboardPage
		padding-left 20px
		.row
			.leftBlock
				.row
					.col-4
						flex-basis: 100%
						padding-right: 15px
						> .separator-30
							height: 0
						.card-mail-class
							margin-bottom: 0
			.notificationBlock
				flex-basis: 50%
				padding-right: 10px

@media all and (max-width: 576px)
	.DashboardPage
		.row
			.leftBlock
				flex-basis: 100%
			.notificationBlock
				flex-basis: 100%