@import './component/style.styl'

.project-options
	max-width $max-card-width
	margin 20px auto
	.createProjectForm
		.field
			.locationErrorHandler
				left: 0
				bottom: -18px
				font-size: 12px
				color: #ff90b5
				white-space: nowrap
				transition: 0.3s
				
	.location-field
		display flex
		flex-wrap wrap
		.input-wrapper
			flex-basis 50%
			margin-bottom 10px
			padding 0 5px
			box-sizing border-box
			.control
				width 100%
				min-height 32px
	.label
		m-font(Roboto, normal, 500, normal, 12px)
		color #666
		display block
		padding 0 0 5px 0
		&.fake
			opacity 0
	.control, .input-modal-auth
		height 32px
		text-align left
		padding-left 10px
		resize none
		box-sizing border-box
		border 1px solid #ddd
		outline none
		border-radius 8px
		color #969696
		&::placeholder
			color #ccc
	.interests
		margin-top 10px
		.interest
			margin-top 10px
			margin-right 20px
			padding 8px 12px
			background #FFFFFF
			border 1px solid #DDDDDD
			box-sizing border-box
			border-radius 8px
			display inline-block
			cursor pointer
			.interest__title
				color $first-color
				font-size 14px
				margin-right 10px
			&:hover
				.interest__title
					font-weight bold

.center
	m-flex()

.error
	border 1px solid red!important

.description
	m-font(Roboto, normal, 500, normal, 16px)
	margin 0
	color #333
	text-align center
	&-main
		font-size: 24px

p.label
	color: #666
	margin 0
	padding-bottom 5px
	m-font()

.radius input
	font-size 14px
	line-height normal
	box-sizing border-box
	border 1px solid #ddd
	border-radius 8px
	color #969696

.project-money
	background: #FFFFFF;
	box-shadow: 0px 1px 5px rgba(0, 0, 0, 0.15);
	border-radius: 8px;
	padding 15px
	.control
		background: #FFFFFF;
		border: 1px solid #DDDDDD;
		box-sizing: border-box;
		border-radius: 8px;

.pickupDays
	margin-left -5px
	margin-right -5px
.pickupDay
	background-color: #ccc;
	color: #666;
	cursor: pointer;
	display: inline-block;
	padding: 8px;
	margin: 5px;
	border-radius: 8px;
	font-size: 12px;
	&.selected
		background-color #1AAAFF
		color: #fff

@media all and (max-width: 768px)
	.project-options
		padding 15px !important