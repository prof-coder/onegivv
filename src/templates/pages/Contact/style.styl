@import './ContactHeader/style.styl'
@import './ContactDetailModal/style.styl'

.import-content
    padding: 30px 0px
    .import-contacts-content
        border-radius: 8px;
        border: 1px solid $first-color
        padding: 0px 0px 0px 20px
        display: flex
        align-items center
        color: #999999;
        font-weight: normal;
        ._label
            flex: 6
            font-size: 14px;
        ._plus
            flex: 1
            font-size: 27px;
            text-align: center
            border-left: 1px solid $first-color
        ._input
            display: none
    .bottom-box
        display: flex;
        justify-content: center
        margin-top: 70px
        .add-contact
            ._label
                font-size: 14px
                font-weight: normal
    .bottom-contact
        m-font(Roboto, normal, normal, 17px, 14px)
        color #666
        text-align center
        margin-top 50px
    .contact-support
        margin-top 20px
        text-align center
        color $first-color
        m-font(Roboto, normal, normal, 17px, 14px)
.contact-page
    margin auto 0
    .header
        display flex
        padding: 30px 0px
        .new-contact
            margin-right: 40px
            ._label        
                font-size: 12px 
                line-height: normal 
                font-weight: normal
        .import-contact
            ._label
                font-size: 12px 
                line-height: normal 
                font-weight: normal
    .contact-box
        background: #FFFFFF
        box-shadow: 0 0 20px rgba(0, 0, 0, .15)
        border-radius: 0
        overflow: hidden
        .header
            padding: 12px 5%
            background: #FFFFFF;
            box-shadow: 0px 7px 20px rgba(0, 0, 0, 0.08);
            display: flex
            justify-content: space-between
            z-index: 1
            .header-title
                display:flex
                color: #666666;
                font-size: 12px;
                font-weight: normal
                line-height: normal
                flex: 1
                padding-right: 20px
                &.action
                    flex: 0.1
                &.birthday
                    flex 0.5
                &.phone
                    flex 0.5
        .search
            padding: 20px 60px
            .search-box
                padding: 12px 0px
                border-bottom: 1px solid #d6d6d6d6
                display: inline
                ._icon
                    color: #d6d6d6d6
                    font-size: 14px
                    margin-right: 15px
                    cursor: pointer
                ._input
                    font-style: italic;
                    font-size: 10px;
                    letter-spacing: -0.1px;
                    outline:none
                    border: none
                    &::placeholder
                        color: rgba(51, 51, 51, 0.2);
        .content-box
            padding: 10px 0px 50px
            min-height: 370px
        .content-footer
            padding-bottom: 50px
            .pagination
                margin: 0px
                display: flex;
                justify-content: center
                padding-left: 0;
                list-style: none;
                border-radius: .25rem;
                li
                    a
                        text-decoration: none
                        position: relative;
                        display: block;
                        padding: .5rem .75rem;
                        margin-left: -1px;
                        line-height: 1.25;
                        color: #666;
                        cursor: pointer
                        background-color: #fff;
                        border: 1px solid #dee2e6;
                        font-size: 12px
                        font-weight: normal
                    &.active
                        a
                            background-color: #666;
                            color: #fff;
    .add-contact
        .content
            padding: 50px 30px
            .contact-input
                max-width: 256px
                padding: 10px 0px
                background: linear-gradient(90deg, $first-color 0%, $first-color 100%) left bottom no-repeat
                background-size: 100% 1px ;
                display: flex
                align-items: center
                ._input
                    flex: 8
                    border: none
                    outline: none
                    font-size: 14px
                    font-weight: normal
                    color: #999999;
                    &::placeholder
                        color: #999999;
                ._img
                    flex: 1
                    width: 10px
                    height: 7px
                .react-phone-number-input__country
                    display: none
            .contact-input-phone
                display: flex
                align-items: center            
                max-width: 256px
                .phone-first
                    flex:1
                    padding: 10px 0px
                    background: linear-gradient(90deg, $first-color 0%, $first-color 100%) left bottom no-repeat
                    background-size: 100% 1px ;
                    margin-right: 30px
                    input
                        text-align: center
                .phone-second
                    flex:3
                    padding: 10px 0px
                    background: linear-gradient(90deg, $first-color 0%, $first-color 100%) left bottom no-repeat
                    background-size: 100% 1px ;
                    display: flex
                    align-items: center
                    ._input
                        flex: 5
                    ._img
                        width: 10px
                        height: 7px
                        flex: 1
                ._input
                    width: 100%
                    border: none
                    outline: none
                    font-size: 14px
                    font-weight: normal
                    color: #999999;
                    &::placeholder
                        color: #999999;
            .validation-error
                max-width: 256px
                height: 14px
                color: #FF90B5;
                font-size: 12px;
                font-weight: normal
                padding: 6px 0px
            .bottom-box
                display: flex;
                justify-content: center
                margin-top: 30px
                .add-contact
                    ._label
                        font-size: 14px
                        font-weight: normal
    .delete-content
        .delete-title
            text-align: center
            font-size: 24px;
            color: #333333;
            margin-bottom: 40px
        .delete-action  
            display: flex
            justify-content: space-evenly;            
    .import-second
        .modalHeader
            margin: 20px 20px 0px;
        .import-second-content 
            display: flex;
            flex-direction: column;
            .column-titles
                padding: 0px 40px
            .action-buttons
                display: flex
                justify-content: space-evenly
                padding-bottom: 35px
            .import-table
                margin: 20px 0px                
                background: #FFFFFF;
                box-shadow: 0px 10px 17px rgba(0, 0, 0, 0.06);
                border-radius: 8px;
                overflow: auto;
                position: relative;
                .header-select
                    display: flex
                    position: sticky;
                    top: 0px;
                    z-index: 1
                    .select-column                        
                        flex 1 0 25%
                        span
                            text-align: center
                        div
                            border-radius: 0px
                            div
                                flex: 1
                                &:first-child
                                    justify-content: flex-end;
                .header                    
                    background #FFFFFF
                    padding 0px
                    display flex
                    position sticky
                    top 34px
                    &.have-title
                        top: 0px
                    .header-title
                        padding 14px
                        color #666666
                        flex 1 0 25%
                        font-size 12px
                        text-align center
                        box-sizing border-box
                        border-bottom 1px solid #ddd
                        border-top 1px solid #ddd
                        &.border-right
                            border-right 1px solid #ddd
                        &.empty
                            color #ddd
                            font-style italic
                .import-body
                    height 340px
                    .content-row
                        display flex
                        .content-column
                            flex 1 0 25%
                            height fit-content
                            text-align center
                            padding 5px 5px 0px
                            box-sizing border-box
                            font-size 14px
                            color #333333
                            &.border-right
                                border-right 1px solid #DDDDDD
                            &.active
                                background #eee
    .import-third
        .content
            display: flex
            flex-direction: column
            padding: 10px 50px;
            .third-title
                color: #666666;
                font-size: 16px;
                margin: 10px 0px                
            .third-content
                display: flex
                flex-direction: column
                label
                    margin: 10px 0px
            .action-buttons
                display: flex
                justify-content: space-evenly
                margin-top: 30px
    .CampaignsPageRequests
        .RequestsHeader
            display flex
            flex-wrap wrap
            margin 10px 0
            .tab
                flex 1 1
                text-align center
                text-decoration none
                color #666
                &.active
                    color $first-color
@media all and (max-width: 576px)
    .contact-page
        .header
            .new-contact
                margin-right: 20px
        .modalContent
            .content
                .left-content
                    flex-basis: 100%
                .right-content
                    flex-basis: 100%