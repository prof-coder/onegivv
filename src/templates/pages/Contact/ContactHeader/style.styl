.contact-header
    width 100%
    m-flex(space-between)
    ._title
        m-flex(space-around)
        position relative
        span
            m-font(Roboto, normal, bold, 23px, 20px)
            color #979797
        .DashNavLink
            padding-left 10px
            .addContactsBtn
                cursor: pointer
        .contact-menu
            display none
            position absolute
            right -40px
            background #fff
            box-shadow 0px 4px 4px rgba(0, 0, 0, 0.25);
            border-radius 8px
            overflow hidden
            top 22px
            padding: 5px 0
            &.open
                display block
                transition .3s
            .contact-menu-item
                padding 0 10px
                color #666
                m-font(Roboto, normal, normal, 17px, 14px)
                text-align left
                background #fff
                &:hover
                    background #eee
                img
                    width: 14px
                    height: auto
                    margin-top: 5px
                    &.create-contact-img
                        width: 13px
                    &.import-contacts-img
                        width: 15px
                span
                    margin-left: 5px
                    font-size: 14px
                    font-weight: normal
    .DashNavContainer
        .DashNavLink
            text-decoration none
    
@media all and (max-width: 768px)
    .contact-header
        width 100%
        m-flex(space-between)
        ._title
            padding: 15px 0 0 15px