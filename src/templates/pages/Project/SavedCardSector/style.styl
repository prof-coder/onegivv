.savedCardBody
    cursor: pointer
    &:first-child
        > section
            box-shadow: none
    > section
        position: relative
        border: 1px solid #dddddd
        .checkedIconBody
            position: absolute
            top: 10px
            right: 10px
        .flexBody
            display: flex
            align-items: center
            p
                font-size: 15px
                font-weight: 500
                line-height: 30px
                &.desc
                    margin-left: 20px